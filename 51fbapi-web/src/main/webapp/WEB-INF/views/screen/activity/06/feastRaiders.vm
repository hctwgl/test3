				'shareAppUrl': 'https://www.baidu.com'
			};

			var dataStr = JSON.stringify(dataObj);  // json数组转换成json对象

			if ( retrunNum == 1 ) {  // 调用原生方法
				alaAndroid.shareData(dataStr);
			} else {
				alaIos.shareData(dataStr);
			}
		};
	</script>

<!DOCTYPE html>
<html lang="en">
<head>
    #set($version="2017103102")
    #set($src="https://f.51fanbei.com/h5/app/activity/08")
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>我要注册</title>
    <link rel="stylesheet" type="text/css" href="/dist/activity/11/barginRegister.css?version=$version">
</head>
<body>
    <div class="login" id="register">
        <div class="topdiv"></div>     
        <div class="phone">
            <input type="tel" maxLength=11 minLength=11  placeholder="请输入登录手机号" id="mobile" class="pinp mobile">
            <span class="big-one">
                <span class="xxicon mmicon"><img src="$src/fork.png"></span>
            </span>
        </div>
        <div class="phone pcheck">
            <input placeholder="请输入短信验证码" class="check pinp" id='yzcheck' maxlength="6" pattern="[0-9]*">
            <span class="checkbtn" isState=0>获取验证码</span>
        </div>
        <div class="phone password">
            <input type="password" maxLength=18 minLength=6  placeholder="请输入密码" class="pinp mobile" id="password">
            <span class="big-two">
                <span class="xxicon pasicon"><img src="$src/fork.png" alt=""></span>
            </span>
        </div>
        <div class="loginbtn">
            立即注册
        </div>
        <div class="protocol-box">
            <label for="checkChoose">
                <input type="checkbox" id="checkChoose" checked="checked">
                <span>阅读并同意注册</span>   
            </label>
            <a class="myprotocol" href="app/sys/registerProtocol">《51返呗新用户协议》</a>
        </div>
        <div class="tolog">
            <a class="tologin" href="./barginLogin">已有账户登录</a>
        </div>
    </div>
    <!--弹窗-->
    <div class="registerMask hide"></div>
    <div class="imgVftCodeWrap hide">
        <div class="imgVftCodeTitle"><p>请输入图形验证码</p><span id="imgVftCodeClose"><i></i></span></div>
        <div class="imgVftCodeInput clearfix">
            <div class="imgVftCodeDiv"><input type="text" class="imgVftCode" id="imgVftCode" maxlength="4" placeholder="请输入"></div>
            <div class="imgVftCodeWrapImgDiv"><img id="imgVftCodeWrapImg" src=""></div>
            <span class="imgVftCodeRefresh" id="imgVftCodeRefresh"><i></i></span>
        </div>
        <button class="imgVftCodeSbumit" id="imgVftCodeSbumit">确定</button>
    </div>
</body>
<script type="text/javascript" src="/dist/js/core.js"></script>
<script type="text/javascript" src="/dist/js/md5.js"></script>
<script type="text/javascript" src="/dist/activity/11/barginRegister.js?version=$version"></script>
<div style="display:none"><script src="https://s4.cnzz.com/z_stat.php?id=1261759898&web_id=1261759898" language="JavaScript"></script></div>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    #set($version="2017082203")
    #set($commonUrl="http://f.51fanbei.com/h5/app/activity/08")
    <meta charset="UTF-8">
    <title>七夕OPPO品牌日</title>
    <link rel="stylesheet" type="text/css" href="/dist/activity/08/selfHome.css?version=$version">
</head>
<body>
    <div id="selfHome" style="background-color: #9b87a9;">
        <img class="lazy" :data-original="returnData.bannerUrl">
        <div class="discountWrap clearfix">
            <img src="$commonUrl/oppoHome1.png">
            <ul class="discount clearfix">
                <li v-for="item in discountMap" @click="goGoodsDetail(item)" style="background-color:#efefef;">
                    <img class="lazy" :data-original="item.goodsIcon">
                    <div class="discountRight">
                        <p class="discountRightTitle">{{item.goodName}}</p>
                        <p class="priceAmount">京东售价：<span>¥{{item.priceAmount}}</span></p>
                        <div class="priceWrap">
                            <span class="saleAmount">¥{{item.saleAmount}}</span>
                            <span class="rebateAmount" style="color: #9e80b1"><i>返</i>¥{{item.rebateAmount}}</span>
                        </div>
                        <span class="goBuyBtn" style="background: #9e80b1">立即抢购</span>
                    </div>
                </li>
            </ul>
        </div>
        <div class="rebateWrap">
            <img src="$commonUrl/oppoHome2.png">
            <ul class="rebate clearfix">
                <li v-for="item in rebateMap" @click="goGoodsDetail(item)" style="background-color:#efefef;">
                    <img class="lazy" :data-original="item.goodsIcon">
                    <div class="rebateRight">
                        <p class="rebateRightTitle">{{item.goodName}}</p>
                        <p class="remark">{{item.remark}}</p>
                        <div class="priceWrap">
                            <span class="saleAmount">¥{{item.saleAmount}}</span>
                            <span class="rebateAmount" style="color: #9e80b1"><i>返</i>¥{{item.rebateAmount}}</span>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</body>
<script type="text/javascript" src="/dist/activity/08/selfHome.js?version=$version"></script>
<script type="text/javascript" src="/dist/js/jquery.lazyload.js"></script>
</html>
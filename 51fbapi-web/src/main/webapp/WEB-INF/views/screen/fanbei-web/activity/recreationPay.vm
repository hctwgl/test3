<!DOCTYPE html>
<html lang="en">
<head>
    #set($version="201712071102")
    #set($src="http://f.51fanbei.com/h5/app/activity/11")
    <meta charset="UTF-8">
    <title>充值服务</title>
    <link rel="stylesheet" type="text/css" href="/dist/activity/11/gamePay.css?version=$version">
</head>
<body>
<div id="recreationPay" class="gamePay">
    <div class="allTop">
        #*<div class="gameName" @click="gameNameClick()">
            <p>服务名称</p>
            <span>{{fixCont.gameName}}</span>
            <i> > </i>
        </div>*#
        <div class="gameName" v-if="allDataLen===1">
            <p>服务名称</p>
            <span>{{fixCont.gameName}}</span>
        </div>
        <div class="gameName" @click="gameNameClick()" v-else>
            <p>服务名称</p>
            <span>{{fixCont.gameName}}</span>
            <i> > </i>
        </div>
        <div class="gamePass gameName">
            <p>{{fixCont.accountType}}</p>
            <input type="text" placeholder=""/>
        </div>
        <div class="kong"></div>
        <div class="payType gameType">
            <p class="title01">充值类型</p>
            <ul class="typeList clearFix">
                <li v-for="(item,index) in fixCont.typeNameList" @click="gameTypeClick(index)">
                    <p class="typeName">{{item}}</p>
                </li>
            </ul>
        </div>
        <div class="gameMoney">
            <p class="title01">面额</p>
            <ul class="moneyList clearFix">
                <li v-for="(item,index) in initPriceList.list" @click="gameMoneyClick(index)">
                    <p class="typeName"><i class="goodsNum">{{item.chargeNum}}</i>{{initPriceList.chargeNumName}}</p>
                    <p class="typePrice"><i class="pricePay">{{fixNum((item.quantity)*(initPriceList.priceTimes)*discout)}}</i>元</p>
                </li>
            </ul>
        </div>
        <div class="kong01"></div>
    </div>
    <div class="footer clearFix">
        <div class="left">
            <p class="payMoney">实付：<span></span></p>
            <p class="fanMoney">充值成功后再返<span></span></p>
        </div>
        <div class="sure" @click="sureClick()">确认充值</div>
    </div>
    <div class="mask" v-show="maskShow" @click="maskClick()"></div>
    <div class="nameCont sameCont">
        <div class="chooseAreaTitle">
            <p class="back" @click="maskClick"> < </p>
            <p>选择服务名称</p>
        </div>
        <ul class="nameList sameList">
            <li v-for="(item,index) in allData" @click="chooseName(index,item)">{{item.gameName}}</li>
        </ul>
    </div>
</div>
<script type="text/javascript" src="/dist/activity/11/recreationPay.js?version=$version"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    #set($version="2017052302")
    #set($commonUrl="https://f.51fanbei.com/h5/app/activity/07")
    <title>借点钱</title>
    <link rel="stylesheet" type="text/css" href="https://img.51fanbei.com/h5/static/swiper-3.4.2.min.css">
    <link rel="stylesheet" type="text/css" href="/dist/activity/wy/wyBorrow.css">
</head>
<body>
<div class="loadingMask"><i class="loading"></i></div>
<div id="vueCon">
    <div class="bar" v-if="barShow">
        <img class="fl" src="$commonUrl/lb.png">
        <a class="fl" :href="content.scrollbar.wordUrl">
            <span v-if="content.scrollbar.content.length<20">{{content.scrollbar.content}}</span>
            <marquee scrollamount="3" v-else>{{content.scrollbar.content}}</marquee>
        </a>
        <img class="fr" src="$commonUrl/x.png" @click="barShow=false">
    </div>
    <div class="banner">
        <a @click="maidian('banner')" :href="banner.content">
            <img class="first" :src="banner.imageUrl">
        </a>
    </div>
    <div class="swiper-container">
        <!-- 如果需要分页器 -->
        <div class="swiper-pagination" id="navWrap"></div>
        <div class="hei"></div>

        <div class="swiper-wrapper" id="wrapper">
            <div class="swiper-slide" v-for="data of content.tabList">
                <a @click="maidian(item.lsmNo)" :href="item.linkUrl" class="app" v-for="item of data.loanShopList">
                    <div class="left">
                        <img class="img" :src="item.iconUrl">
                        <div class="name">{{item.lsmName}}</div>
                        <div class="text">{{item.lsmIntro}}</div>
                    </div>
                    <div class="right" v-if="item.marketPoint">
                        <div class="num">{{sp(item.marketPoint,0)}}</div>
                        <div class="text">{{sp(item.marketPoint,1)}}</div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
</body>
<script type="text/javascript" src="https://img.51fanbei.com/h5/static/swiper-3.4.2.jquery.min.js"></script>
<script src="/dist/activity/wy/wyBorrow.js"></script>
</html>
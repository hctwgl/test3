<!DOCTYPE html>
<html lang="en">
    <head>
    	#set($version="2017032101")
		<title>领取优惠劵</title>
		<link rel="stylesheet" type="text/css" href="/css/app/user/receiveCoupons.css?version=$version">
    </head>
    <body>
		<input type="hidden" id="couponList" name="couponList" value=$jsonUtil.toJSONString($!{couponList})>
		<input type="hidden" id="userName" name="userName" value="$!{userName}">
		#if($!{couponList.size()}==0)
	   		<div class="nullPrompt">
	   			<img src="/images/common/040101wuyouhui.png">
				<span class="fsc_6">暂无优惠劵</span>
	   		</div>
		#end
		<ul class="receiveCoupons_main">
			#foreach($item in $!{couponList})
			<li>
				<div class="fl receiveCoupons_mainContent">
					<div class="receiveCoupons_content clearfix">
						<span class="fl fs_50 tac fsc_blue receiveCoupons_priceInfo">￥<span class="fs_92 box1">$priceUtil.bigdecimalToInt($!{item.amount})</span></span>
						<div class="fl fs_24 fsc_6 receiveCoupons_text">
							<p class="fsc_1 fs_32">$!{item.name}</p>
							<p>$!{item.useRule}</p>
							<p>$!{item.limitCount}</p>
						</div>
					</div>
					<p class="fs_22 fsc_6 tal receiveCoupons_date">$dateUtil.formatDate($!{item.gmtStart},"yyyy-MM-dd") 至 $dateUtil.formatDate($!{item.gmtEnd},"yyyy-MM-dd")</p>
				</div>
				<button class="fr receiveCoupons_btn">立即领取</button>
			</li>
			#end
		</ul>
		<script type="text/javascript" src="/js/common/layer.js"></script>
		<script type="text/javascript" src="/js/app/user/receiveCoupons.js?version=$version"></script>
    </body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    #set($version="2017082302")
    #set($commonUrl="http://f.51fanbei.com/h5/app/activity/08")
    <meta charset="UTF-8">
    <title>开学OPPO品牌日</title>
    <link rel="stylesheet" type="text/css" href="/dist/activity/08/qiXiPhone.css">
</head>
<body>
    <div id="selfHome" v-cloak>
        <img :src="returnData.bannerUrl">
        <div class="bigWrap">
            <div class="bigBox" style="padding:0.04rem">
            <div class="topLine"></div>
            <div class="leftLine"></div>
            <div class="bottomLine"></div>
            <div class="rightLine"></div>
                <div class="discountWrap" style="background-color: white; border:0.01rem solid #DFDBE1;">
                    <div class="bannerUrl">
                    <img src="$commonUrl/oppoHome01.png">
                    </div>
                    <ul class="discount clearfix" style="background-color: white;">
                        <li v-for="item in discountMap" @click="goGoodsDetail(item)" class="buyBtn">
                            <img :data-original="item.goodsIcon" class="lazy">
                            <div class="discountRight">
                                <p class="discountRightTitle">{{item.goodName}}</p>
                                <div class="priceWrap">
                                    <span class="saleAmount">¥{{item.saleAmount}}</span>
                                    <span class="rebateAmount"><i></i>¥{{item.rebateAmount}}</span>
                                </div>
                                <p class="priceAmount" v-if="item.nperMap.isFree==='0'">月供{{item.nperMap.amount}}起</p>
                                <p class="priceAmount" v-if="item.nperMap.isFree==='1' || item.nperMap.isFree==='2'">月供{{item.nperMap.freeAmount}}起</p>
                                <span class="goBuyBtn">立即抢购</span>
                            </div>
                        </li>
                    </ul>
                </div>
                <img src="$commonUrl/tangle.png" alt="" class="tangle">
            </div>
            <div class="rebateWrap" style="padding: 0.04rem;">
                <div class="r-topLine"></div>
                <div class="r-leftLine"></div>
                <div class="r-bottomLine"></div>
                <div class="r-rightLine"></div>
                <div class="bannerUrl" style="background-color: white;"><img src="$commonUrl/oppoHome01.png"></div>
                <ul class="rebate clearfix" style="background-color: white;">
                    <li v-for="item in rebateMap" @click="goGoodsDetail(item)">
                        <img :data-original="item.goodsIcon" class="lazy">
                        <div class="rebateRight">
                            <p class="rebateRightTitle">{{item.goodName}}</p>
                            <!--<p class="remark">{{item.remark}}</p>!-->
                            <div class="priceWrap">
                                <span class="saleAmount">¥{{item.saleAmount}}</span>
                                <span class="rebateAmount"><i></i>¥{{item.rebateAmount}}</span>
                            </div>
                            <p class="monthPay" v-if="item.nperMap.isFree==='0'">月供{{item.nperMap.amount}}起</p>
                            <p class="monthPay" v-if="item.nperMap.isFree==='1' || item.nperMap.isFree==='2'">月供{{item.nperMap.freeAmount}}起</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</body>
<script type="text/javascript" src="/dist/activity/08/qiXiPhone.js"></script>
</html>
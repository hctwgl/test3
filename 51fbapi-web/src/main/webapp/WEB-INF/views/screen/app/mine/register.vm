<!DOCTYPE html>
<html lang="en">
    <head>
    	#set($version="2017021501")
		<title>注册</title>
		<!-- <link rel="stylesheet" type="text/css" href="/css/common/layer.css?version=$version"> -->
		<link rel="stylesheet" type="text/css" href="/css/app/mine/register.css?version=$version">
		<script type="text/javascript" src="/js/common/layer.js?version=$version"></script>
		<script type="text/javascript" src="/js/common/base.js?version=$version"></script>
		<script type="text/javascript" src="/js/app/mine/register.js?version=$version"></script>
    </head>
    <body>
    	<div class="register_main">
			<ul>
		        <li>
			    	<input type="text" class="register_mobile" id="register_mobile" placeholder="请输入手机号" pattern="[0-9]*"  maxlength="11">
			    	<i class="register_mobileIcon register_icon_hide">X</i>
		        </li>
	    	    <li class="clearfix">
			        <input type="text" class="register_verification" id="register_verification" maxlength="6" pattern="[0-9]*" placeholder="请输入验证码">
			        <i class="register_verificationIcon register_icon_hide">X</i>
		        	<span class="register_codeBtn"><span>获取验证码</span></span>
		        </li>
		        <li>
		        	<input type="text" class="register_password" id="register_password" placeholder="请设置登录密码" pattern="[0-9]*"  maxlength="11">
		        	<i class="register_passwordIcon register_icon_hide">X</i>
		        </li>
	        </ul>
	      	<div class="register_submitBtn">完成注册并下载App</div>
		</div>

<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
  <properties>
	  <property name="defaultLogPattern">%d{HH:mm:ss.SSS} [%t] %-5p %c{1} - %m%n</property>
	  <property name="defaultFilePattern">%d{yyyy-MM-dd-HH}-%i</property>
  </properties>

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="${defaultLogPattern}"/>
    </Console>
    
    <!-- 默认Appender，所有未归类的日志全部打印到此 -->
	<RollingFile name="DEFAULT_APPENDER" fileName="logs/app.log" filePattern="logs/app-${defaultFilePattern}.log.gz">
      <PatternLayout>
        <Pattern>${defaultLogPattern}</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="250 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="20"/>
    </RollingFile>
	
  </Appenders>
  
  <Loggers>
    <Root level="DEBUG">
      <AppenderRef ref="Console"/>
    </Root>
    
    <AsyncLogger name="com.ald.fanbei" level="DEBUG" additivity="false">
      <AppenderRef ref="Console"/>
    </AsyncLogger>
  </Loggers>
  
</Configuration>
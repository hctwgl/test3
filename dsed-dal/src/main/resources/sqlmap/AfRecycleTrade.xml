<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_recycle_trade表 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfRecycleTradeDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,gmt_create,gmt_modified,type,remain_amount,trade_amount,return_amount,ratio,ref_id,gmt_creator,gmt_modifier 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="gmtModified !=null">
            AND gmt_modified = #{gmtModified,jdbcType=TIMESTAMP}
        </if>
        <if test="type != null and type != ''">
            AND type = #{type,jdbcType=INTEGER}
        </if>
        <if test="remainAmount != null and remainAmount != ''">
            AND remain_amount = #{remainAmount,jdbcType=DECIMAL}
        </if>
        <if test="tradeAmount != null and tradeAmount != ''">
            AND trade_amount = #{tradeAmount,jdbcType=DECIMAL}
        </if>
        <if test="returnAmount != null and returnAmount != ''">
            AND return_amount = #{returnAmount,jdbcType=DECIMAL}
        </if>
        <if test="ratio != null and ratio != ''">
            AND ratio = #{ratio,jdbcType=DECIMAL}
        </if>
        <if test="refId != null and refId != ''">
            AND ref_id = #{refId,jdbcType=INTEGER}
        </if>
        <if test="gmtCreator != null and gmtCreator != ''">
            AND gmt_creator = #{gmtCreator,jdbcType=VARCHAR}
        </if>
        <if test="gmtModifier != null and gmtModifier != ''">
            AND gmt_modifier = #{gmtModifier,jdbcType=VARCHAR}
        </if>
    </sql>

    <!-- 添加交易记录 -->
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AfRecycleTradeDo" keyProperty="rid" useGeneratedKeys="true">
        INSERT INTO af_recycle_trade
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
	        <if test="gmtModified != null">        
	            gmt_modified,
	        </if>
	        <if test="type != null">        
	            `type`,
	        </if>
	        <if test="remainAmount != null">        
	            remain_amount,
	        </if>
	        <if test="tradeAmount != null">        
	            trade_amount,
	        </if>
	        <if test="returnAmount != null">        
	            return_amount,
	        </if>
	        <if test="ratio != null">        
	            ratio,
	        </if>
	        <if test="refId != null">        
	            ref_id,
	        </if>
	        <if test="gmtCreator != null">        
	            gmt_creator,
	        </if>
	        <if test="gmtModifier != null">        
	            gmt_modifier,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
		    <if test="gmtModified != null" >
		       #{gmtModified,jdbcType=TIMESTAMP},
		    </if>
		    <if test="type != null" >
		       #{type,jdbcType=INTEGER},
		    </if>
		    <if test="remainAmount != null" >
		       #{remainAmount,jdbcType=DECIMAL},
		    </if>
		    <if test="tradeAmount != null" >
		       #{tradeAmount,jdbcType=DECIMAL},
		    </if>
		    <if test="returnAmount != null" >
		       #{returnAmount,jdbcType=DECIMAL},
		    </if>
		    <if test="ratio != null" >
		       #{ratio,jdbcType=DECIMAL},
		    </if>
		    <if test="refId != null" >
		       #{refId,jdbcType=INTEGER},
		    </if>
		    <if test="gmtCreator != null" >
		       #{gmtCreator,jdbcType=VARCHAR},
		    </if>
		    <if test="gmtModifier != null" >
		       #{gmtModifier,jdbcType=VARCHAR},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfRecycleTradeDo">
        UPDATE af_recycle_trade
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="type != null and type != '' ">        
                type = #{type,jdbcType=INTEGER},                
            </if>
            <if test="remainAmount != null and remainAmount != '' ">        
                remain_amount = #{remainAmount,jdbcType=DECIMAL},                
            </if>
            <if test="tradeAmount != null and tradeAmount != '' ">        
                trade_amount = #{tradeAmount,jdbcType=DECIMAL},                
            </if>
            <if test="returnAmount != null and returnAmount != '' ">        
                return_amount = #{returnAmount,jdbcType=DECIMAL},                
            </if>
            <if test="ratio != null and ratio != '' ">        
                ratio = #{ratio,jdbcType=DECIMAL},                
            </if>
            <if test="refId != null and refId != '' ">        
                ref_id = #{refId,jdbcType=INTEGER},                
            </if>
            <if test="gmtCreator != null and gmtCreator != '' ">        
                gmt_creator = #{gmtCreator,jdbcType=VARCHAR},                
            </if>
            <if test="gmtModifier != null and gmtModifier != '' ">        
                gmt_modifier = #{gmtModifier,jdbcType=VARCHAR}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfRecycleTradeDo">
        SELECT
        <include refid="queryFields" />
        FROM af_recycle_trade
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfRecycleTradeDo" parameterType="com.ald.fanbei.api.dal.domain.AfRecycleTradeDo">
        SELECT
        <include refid="queryFields" />
        FROM af_recycle_trade
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfRecycleTradeDo" parameterType="com.ald.fanbei.api.dal.domain.AfRecycleTradeDo">
        SELECT
        <include refid="queryFields" />
        FROM af_recycle_trade
        <include refid="commonCondition"/>
    </select>

    <!-- 获取最后一条交易 -->
    <select id="getLastRecord" resultType="AfRecycleTradeDo">
    	SELECT
			<include refid="queryFields"/>
		FROM
			af_recycle_trade
		WHERE
			is_delete = 0
		ORDER BY
			id DESC
		LIMIT 1
    </select>
    

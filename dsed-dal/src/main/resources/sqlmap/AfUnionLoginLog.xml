<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_union_login_log表:'联合登录用户登录日志表模块 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfUnionLoginLogDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,phone,channel_code,gmt_modified,request_info 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="phone != null and phone != ''">
            AND phone = #{phone,jdbcType=VARCHAR}
        </if>
        <if test="channelCode != null and channelCode != ''">
            AND channel_code = #{channelCode,jdbcType=VARCHAR}
        </if>
        <if test="gmtModified !=null">
            AND gmt_modified = #{gmtModified,jdbcType=TIMESTAMP}
        </if>
        <if test="requestInfo != null and requestInfo != ''">
            AND request_info = #{requestInfo,jdbcType=VARCHAR}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AfUnionLoginLogDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO af_union_login_log
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="phone != null">        
	            phone,
	        </if>
	        <if test="channelCode != null">        
	            channel_code,
	        </if>
	        <if test="gmtModified != null">        
	            gmt_modified,
	        </if>
	        <if test="requestInfo != null">        
	            request_info,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="phone != null" >
		       #{phone,jdbcType=VARCHAR},
		    </if>
		    <if test="channelCode != null" >
		       #{channelCode,jdbcType=VARCHAR},
		    </if>
		    <if test="gmtModified != null" >
		       #{gmtModified,jdbcType=TIMESTAMP},
		    </if>
		    <if test="requestInfo != null" >
		       #{requestInfo,jdbcType=VARCHAR},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfUnionLoginLogDo">
        UPDATE af_union_login_log
          <set>
            <if test="phone != null and phone != '' ">        
                phone = #{phone,jdbcType=VARCHAR},                
            </if>
            <if test="channelCode != null and channelCode != '' ">        
                channel_code = #{channelCode,jdbcType=VARCHAR},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="requestInfo != null and requestInfo != '' ">        
                request_info = #{requestInfo,jdbcType=VARCHAR}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfUnionLoginLogDo">
        SELECT
        <include refid="queryFields" />
        FROM af_union_login_log
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfUnionLoginLogDo" parameterType="com.ald.fanbei.api.dal.domain.AfUnionLoginLogDo">
        SELECT
        <include refid="queryFields" />
        FROM af_union_login_log
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfUnionLoginLogDo" parameterType="com.ald.fanbei.api.dal.domain.AfUnionLoginLogDo">
        SELECT
        <include refid="queryFields" />
        FROM af_union_login_log
        <include refid="commonCondition"/>
    </select>
    
</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- dsed_loan_overdue_log表 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.DsedLoanOverdueLogDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,gmt_create,user_id,periods_id,interest,current_amount 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="userId != null and userId != ''">
            AND user_id = #{userId,jdbcType=INTEGER}
        </if>
        <if test="periodsId != null and periodsId != ''">
            AND periods_id = #{periodsId,jdbcType=INTEGER}
        </if>
        <if test="interest != null and interest != ''">
            AND interest = #{interest,jdbcType=DECIMAL}
        </if>
        <if test="currentAmount != null and currentAmount != ''">
            AND current_amount = #{currentAmount,jdbcType=DECIMAL}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.DsedLoanOverdueLogDo" keyProperty="rid" useGeneratedKeys="true">
        INSERT INTO dsed_loan_overdue_log
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
	        <if test="userId != null">        
	            user_id,
	        </if>
	        <if test="periodsId != null">        
	            periods_id,
	        </if>
	        <if test="interest != null">        
	            interest,
	        </if>
	        <if test="currentAmount != null">        
	            current_amount,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
		    <if test="userId != null" >
		       #{userId,jdbcType=INTEGER},
		    </if>
		    <if test="periodsId != null" >
		       #{periodsId,jdbcType=INTEGER},
		    </if>
		    <if test="interest != null" >
		       #{interest,jdbcType=DECIMAL},
		    </if>
		    <if test="currentAmount != null" >
		       #{currentAmount,jdbcType=DECIMAL},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.DsedLoanOverdueLogDo">
        UPDATE dsed_loan_overdue_log
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="userId != null and userId != '' ">        
                user_id = #{userId,jdbcType=INTEGER},                
            </if>
            <if test="periodsId != null and periodsId != '' ">        
                periods_id = #{periodsId,jdbcType=INTEGER},                
            </if>
            <if test="interest != null and interest != '' ">        
                interest = #{interest,jdbcType=DECIMAL},                
            </if>
            <if test="currentAmount != null and currentAmount != '' ">        
                current_amount = #{currentAmount,jdbcType=DECIMAL}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.DsedLoanOverdueLogDo">
        SELECT
        <include refid="queryFields" />
        FROM dsed_loan_overdue_log
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.DsedLoanOverdueLogDo" parameterType="com.ald.fanbei.api.dal.domain.DsedLoanOverdueLogDo">
        SELECT
        <include refid="queryFields" />
        FROM dsed_loan_overdue_log
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.DsedLoanOverdueLogDo" parameterType="com.ald.fanbei.api.dal.domain.DsedLoanOverdueLogDo">
        SELECT
        <include refid="queryFields" />
        FROM dsed_loan_overdue_log
        <include refid="commonCondition"/>
    </select>

    <insert id="addLoanOverdueLog" parameterType="DsedLoanOverdueLogDo" useGeneratedKeys="true" keyProperty="rid">
        INSERT INTO dsed_loan_overdue_log(gmt_create , user_id , periods_id , interest , current_amount)
        VALUES (
        NOW(),
        #{userId},
        #{periodsId},
        #{interest},
        #{currentAmount}
        )
    </insert>
    <select id="getLoanOverDueLogByNow" resultType="com.ald.fanbei.api.dal.domain.DsedLoanOverdueLogDo">
        SELECT
        <include refid="queryFields" />
        FROM dsed_loan_overdue_log
        WHERE is_delete=0 AND periods_id=#{periodsId} AND  to_days(gmt_create)=to_days(now())
        limit 0,1
    </select>

</mapper>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfBusinessTypeDo">
        SELECT
        <include refid="queryFields" />
        FROM af_business_type
        WHERE is_delete = 0 AND id=#{id ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>
    <select id="getList" resultType="com.ald.fanbei.api.dal.domain.AfBusinessTypeDo">
        SELECT
        <include refid="queryFields" />
        FROM af_business_type
        WHERE is_delete = 0 
        ORDER BY gmt_create DESC
    </select>
	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfBusinessTypeDo" parameterType="com.ald.fanbei.api.dal.domain.AfBusinessTypeDo">
        SELECT
        <include refid="queryFields" />
        FROM af_business_type
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfBusinessTypeDo" parameterType="com.ald.fanbei.api.dal.domain.AfBusinessTypeDo">

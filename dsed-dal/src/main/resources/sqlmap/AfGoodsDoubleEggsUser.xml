<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_goods_double_eggs_user表:双蛋活动模块 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfGoodsDoubleEggsUserDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,gmt_create,gmt_modified,double_eggs_id,user_id,is_ordered 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="gmtModified !=null">
            AND gmt_modified = #{gmtModified,jdbcType=TIMESTAMP}
        </if>
        <if test="doubleEggsId != null and doubleEggsId != ''">
            AND double_eggs_id = #{doubleEggsId,jdbcType=INTEGER}
        </if>
        <if test="userId != null and userId != ''">
            AND user_id = #{userId,jdbcType=INTEGER}
        </if>
        <if test="isOrdered != null and isOrdered != ''">
            AND is_ordered = #{isOrdered,jdbcType=INTEGER}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AfGoodsDoubleEggsUserDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO af_goods_double_eggs_user
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
	        <if test="gmtModified != null">        
	            gmt_modified,
	        </if>
	        <if test="doubleEggsId != null">        
	            double_eggs_id,
	        </if>
	        <if test="userId != null">        
	            user_id,
	        </if>
	        <if test="isOrdered != null">        
	            is_ordered,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
		    <if test="gmtModified != null" >
		       #{gmtModified,jdbcType=TIMESTAMP},
		    </if>
		    <if test="doubleEggsId != null" >
		       #{doubleEggsId,jdbcType=INTEGER},
		    </if>
		    <if test="userId != null" >
		       #{userId,jdbcType=INTEGER},
		    </if>
		    <if test="isOrdered != null" >
		       #{isOrdered,jdbcType=INTEGER},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfGoodsDoubleEggsUserDo">
        UPDATE af_goods_double_eggs_user
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="doubleEggsId != null and doubleEggsId != '' ">        
                double_eggs_id = #{doubleEggsId,jdbcType=INTEGER},                
            </if>
            <if test="userId != null and userId != '' ">        
                user_id = #{userId,jdbcType=INTEGER},                
            </if>
            <if test="isOrdered != null and isOrdered != '' ">        
                is_ordered = #{isOrdered,jdbcType=INTEGER}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfGoodsDoubleEggsUserDo">
        SELECT
        <include refid="queryFields" />
        FROM af_goods_double_eggs_user
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfGoodsDoubleEggsUserDo" parameterType="com.ald.fanbei.api.dal.domain.AfGoodsDoubleEggsUserDo">
        SELECT
        <include refid="queryFields" />
        FROM af_goods_double_eggs_user
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfGoodsDoubleEggsUserDo" parameterType="com.ald.fanbei.api.dal.domain.AfGoodsDoubleEggsUserDo">
        SELECT
        <include refid="queryFields" />
        FROM af_goods_double_eggs_user
        <include refid="commonCondition"/>
    </select>
    
    <select id="isSubscribed" resultType="java.lang.Integer">
		SELECT
			COUNT(1)
		FROM
			af_goods_double_eggs_user
		WHERE
			is_delete = 0
		AND user_id = #{userId}
		AND double_eggs_id = #{doubleGoodsId};
    </select>

	<select id="getSpringFestivalNumber" resultType="java.lang.Integer" parameterType="java.lang.Long">
		SELECT DISTINCT
			(COUNT(u.`user_id`))
		FROM
			af_goods_double_eggs_user u
		INNER JOIN af_goods_double_eggs de ON de.id = u.double_eggs_id
		WHERE
			u.`is_ordered` = 2
		AND de.goods_id = #{goodsId};
	</select>
</mapper>

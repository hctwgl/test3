        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfBoluomeRedpacketDo" parameterType="com.ald.fanbei.api.dal.domain.AfBoluomeRedpacketDo">

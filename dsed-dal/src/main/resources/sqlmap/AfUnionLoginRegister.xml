<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_union_login_register表:'联合登录用户登录日志表模块 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfUnionLoginRegisterDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,channel_code,phone,default_password,gmt_create,user_id
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE 0 = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="channelCode != null and channelCode != ''">
            AND channel_code = #{channelCode,jdbcType=VARCHAR}
        </if>
        <if test="phone != null and phone != ''">
            AND phone = #{phone,jdbcType=VARCHAR}
        </if>
        <if test="defaultPassword != null and defaultPassword != ''">
            AND default_password = #{defaultPassword,jdbcType=VARCHAR}
        </if>
        <if test="requestInfo != null and requestInfo != ''">
            AND request_info = #{requestInfo,jdbcType=VARCHAR}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="userId != null and userId != ''">
            AND user_id = #{userId,jdbcType=INTEGER}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AfUnionLoginRegisterDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO af_union_login_register
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="channelCode != null">        
	            channel_code,
	        </if>
	        <if test="phone != null">        
	            phone,
	        </if>
	        <if test="defaultPassword != null">        
	            default_password,
	        </if>
	        <if test="requestInfo != null">        
	            request_info,
	        </if>
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
	        <if test="userId != null">        
	            user_id,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="channelCode != null" >
		       #{channelCode,jdbcType=VARCHAR},
		    </if>
		    <if test="phone != null" >
		       #{phone,jdbcType=VARCHAR},
		    </if>
		    <if test="defaultPassword != null" >
		       #{defaultPassword,jdbcType=VARCHAR},
		    </if>
		    <if test="requestInfo != null" >
		       #{requestInfo,jdbcType=VARCHAR},
		    </if>
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
		    <if test="userId != null" >
		       #{userId,jdbcType=INTEGER},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfUnionLoginRegisterDo">
        UPDATE af_union_login_register
          <set>
            <if test="channelCode != null and channelCode != '' ">        
                channel_code = #{channelCode,jdbcType=VARCHAR},                
            </if>
            <if test="phone != null and phone != '' ">        
                phone = #{phone,jdbcType=VARCHAR},                
            </if>
            <if test="defaultPassword != null and defaultPassword != '' ">        
                default_password = #{defaultPassword,jdbcType=VARCHAR},                
            </if>
            <if test="requestInfo != null and requestInfo != '' ">        
                request_info = #{requestInfo,jdbcType=VARCHAR},                
            </if>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="userId != null and userId != '' ">        
                user_id = #{userId,jdbcType=INTEGER}                
            </if>
        </set>    
        WHERE  id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfUnionLoginRegisterDo">
        SELECT
        <include refid="queryFields" />
        FROM af_union_login_register
        WHERE  id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfUnionLoginRegisterDo" parameterType="com.ald.fanbei.api.dal.domain.AfUnionLoginRegisterDo">
        SELECT
        <include refid="queryFields" />
        FROM af_union_login_register
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfUnionLoginRegisterDo" parameterType="com.ald.fanbei.api.dal.domain.AfUnionLoginRegisterDo">
        SELECT
        <include refid="queryFields" />
        FROM af_union_login_register
        <include refid="commonCondition"/>
    </select>
    
</mapper>

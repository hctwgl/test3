<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- risk_tracker表:风控调用追踪模块 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.RiskTrackerDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,track_id,url,params,result,gmt_create 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE 0 = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="trackId != null and trackId != ''">
            AND track_id = #{trackId,jdbcType=VARCHAR}
        </if>
        <if test="url != null and url != ''">
            AND url = #{url,jdbcType=VARCHAR}
        </if>
        <if test="params != null and params != ''">
            AND params = #{params,jdbcType=VARCHAR}
        </if>
        <if test="result != null and result != ''">
            AND result = #{result,jdbcType=VARCHAR}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.RiskTrackerDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO risk_tracker
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="trackId != null">        
	            track_id,
	        </if>
	        <if test="url != null">        
	            url,
	        </if>
	        <if test="params != null">        
	            params,
	        </if>
	        <if test="result != null">        
	            result,
	        </if>
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="trackId != null" >
		       #{trackId,jdbcType=VARCHAR},
		    </if>
		    <if test="url != null" >
		       #{url,jdbcType=VARCHAR},
		    </if>
		    <if test="params != null" >
		       #{params,jdbcType=VARCHAR},
		    </if>
		    <if test="result != null" >
		       #{result,jdbcType=VARCHAR},
		    </if>
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.RiskTrackerDo">
        UPDATE risk_tracker
          <set>
            <if test="trackId != null and trackId != '' ">        
                track_id = #{trackId,jdbcType=VARCHAR},                
            </if>
            <if test="url != null and url != '' ">        
                url = #{url,jdbcType=VARCHAR},                
            </if>
            <if test="params != null and params != '' ">        
                params = #{params,jdbcType=VARCHAR},                
            </if>
            <if test="result != null and result != '' ">        
                result = #{result,jdbcType=VARCHAR},                
            </if>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}                
            </if>
        </set>    
        WHERE  id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.RiskTrackerDo">
        SELECT
        <include refid="queryFields" />
        FROM risk_tracker
        WHERE  id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.RiskTrackerDo" parameterType="com.ald.fanbei.api.dal.domain.RiskTrackerDo">
        SELECT
        <include refid="queryFields" />
        FROM risk_tracker
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.RiskTrackerDo" parameterType="com.ald.fanbei.api.dal.domain.RiskTrackerDo">
        SELECT
        <include refid="queryFields" />
        FROM risk_tracker
        <include refid="commonCondition"/>
    </select>
    
</mapper>

        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfAdInstalmentsDo">
        UPDATE af_ad_instalments
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="creator != null and creator != '' ">        
                creator = #{creator,jdbcType=VARCHAR},                
            </if>
            <if test="modifier != null and modifier != '' ">        
                modifier = #{modifier,jdbcType=VARCHAR},                
            </if>
            <if test="name != null and name != '' ">        
                name = #{name,jdbcType=VARCHAR},                
            </if>
            <if test="pictureUrl != null and pictureUrl != '' ">        
                picture_url = #{pictureUrl,jdbcType=VARCHAR},                
            </if>
            <if test="status != null and status != '' ">        
                status = #{status,jdbcType=INTEGER}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getAdInfo" resultType="com.ald.fanbei.api.dal.domain.AfAdInstalmentsDo">
        SELECT
        <include refid="queryFields" />
        FROM af_ad_instalments
        WHERE is_delete = 0 AND status = '1'  ORDER BY gmt_modified DESC
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfAdInstalmentsDo" parameterType="com.ald.fanbei.api.dal.domain.AfAdInstalmentsDo">
        SELECT
        <include refid="queryFields" />
        FROM af_ad_instalments
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfAdInstalmentsDo" parameterType="com.ald.fanbei.api.dal.domain.AfAdInstalmentsDo">

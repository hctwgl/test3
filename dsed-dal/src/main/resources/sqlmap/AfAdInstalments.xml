	        <if test="modifier != null">        
	            modifier,
	        </if>
	        <if test="name != null">        
	            name,
	        </if>
	        <if test="pictureUrl != null">        
	            picture_url,
	        </if>
	        <if test="status != null">        
	            status,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >

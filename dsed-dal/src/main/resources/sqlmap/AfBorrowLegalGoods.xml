        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfBorrowLegalGoodsDo">
        UPDATE af_borrow_legal_goods
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="goodsId != null and goodsId != '' ">        
                goods_id = #{goodsId,jdbcType=INTEGER},                
            </if>
            <if test="startProfitAmount != null and startProfitAmount != '' ">        
                start_profit_amount = #{startProfitAmount,jdbcType=DECIMAL},                
            </if>
            <if test="endProfitAmount != null and endProfitAmount != '' ">        
                end_profit_amount = #{endProfitAmount,jdbcType=DECIMAL},                
            </if>
            <if test="sort != null and sort != '' ">        
                sort = #{sort,jdbcType=INTEGER}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfBorrowLegalGoodsDo">
        SELECT
        <include refid="queryFields" />
        FROM af_borrow_legal_goods
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfBorrowLegalGoodsDo" parameterType="com.ald.fanbei.api.dal.domain.AfBorrowLegalGoodsDo">
        SELECT
        <include refid="queryFields" />
        FROM af_borrow_legal_goods
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfBorrowLegalGoodsDo" parameterType="com.ald.fanbei.api.dal.domain.AfBorrowLegalGoodsDo">
        SELECT
        <include refid="queryFields" />
        FROM af_borrow_legal_goods
        <include refid="commonCondition"/>
    </select>
    
     <select id="getGoodsIdByProfitAmout" resultType="java.lang.Long" >
        SELECT
        goods_id
        FROM af_borrow_legal_goods
        WHERE
        end_profit_amount > #{profitAmout}
        AND
        #{profitAmout} >= start_profit_amount
        AND
        is_delete = 0
        LIMIT 1
    </select>
    
    <select id="getGoodsIdByProfitAmoutForV2" resultType="java.lang.Long" >

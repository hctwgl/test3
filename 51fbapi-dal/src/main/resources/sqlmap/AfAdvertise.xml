     <select id="getDirectionalRecommendInfo" resultType="com.ald.fanbei.api.dal.domain.dto.AfAdvertiseDto" >
      
        select a.id rid, a.image , a.url , a.url_type,a.position_code,a.query_conditions,b.type appendMode
      from af_advertise  a
     	 inner join af_position_advertise_switch b on b.position_code = a.position_code
      where 
	      a.is_delete = 0
	      and   a.status = 'Y'
	      and   a.position_code = #{positionCode}
	      and   a.start_time  <![CDATA[ <= ]]> now()  and a.end_time <![CDATA[ >= ]]>   NOW()
	      AND   a.click_count <![CDATA[ < ]]> a.day_count
	      and   b.is_delete = 0
	      and   b.status = 'Y'
      ORDER BY a.priority DESC
    </select>

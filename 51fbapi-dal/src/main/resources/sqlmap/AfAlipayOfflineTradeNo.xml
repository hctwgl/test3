<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_alipay_offline_trade_no表 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfAlipayOfflineTradeNoDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,DATE_FORMAT(gmt_create,'%Y-%m-%d %H:%i:%s') gmt_create,payserialnum,user_id
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate}
        </if>
        <if test="payserialnum != null and payserialnum != ''">
            AND payserialnum = #{payserialnum,jdbcType=VARCHAR}
        </if>
        <if test="userId != null and userId != ''">
            AND user_id = #{userId,jdbcType=INTEGER}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AfAlipayOfflineTradeNoDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO af_alipay_offline_trade_no
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        gmt_create,
	       payserialnum,
	     user_id,

        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    now(),
		   #{payserialnum,jdbcType=VARCHAR},
		   #{userId,jdbcType=INTEGER},

        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfAlipayOfflineTradeNoDo">
        UPDATE af_alipay_offline_trade_no
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="payserialnum != null and payserialnum != '' ">        
                payserialnum = #{payserialnum,jdbcType=VARCHAR},                
            </if>
            <if test="userId != null and userId != '' ">        
                user_id = #{userId,jdbcType=INTEGER}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfAlipayOfflineTradeNoDo">
        SELECT
        <include refid="queryFields" />
        FROM af_alipay_offline_trade_no
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfAlipayOfflineTradeNoDo" parameterType="com.ald.fanbei.api.dal.domain.AfAlipayOfflineTradeNoDo">
        SELECT
        <include refid="queryFields" />
        FROM af_alipay_offline_trade_no
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfAlipayOfflineTradeNoDo" parameterType="com.ald.fanbei.api.dal.domain.AfAlipayOfflineTradeNoDo">

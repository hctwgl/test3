         WHERE  id = #{id ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfRetryTemplDo">
        SELECT
        <include refid="queryFields" />
        FROM af_retry_templ
        WHERE  id=#{id ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfRetryTemplDo" parameterType="com.ald.fanbei.api.dal.domain.AfRetryTemplDo">
        SELECT
        <include refid="queryFields" />
        FROM af_retry_templ

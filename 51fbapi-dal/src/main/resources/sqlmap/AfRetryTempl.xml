        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfRetryTemplDo" parameterType="com.ald.fanbei.api.dal.domain.AfRetryTemplDo">
        SELECT
        <include refid="queryFields" />
        FROM af_retry_templ
        <include refid="commonCondition"/>
    </select>
    
    <update id="deleteByBusidAndEventType">
        UPDATE af_retry_templ
        set is_delete=1,gmt_modified =now()
     	WHERE
			bus_id = #{borrowNo}
		AND event_type =#{eventType}
		AND is_delete=0
    </update>
    
   	<select id="getByBusIdAndEventType" parameterType="java.lang.String" resultType="com.ald.fanbei.api.dal.domain.AfRetryTemplDo">
	   	SELECT
		<include refid="queryFields" />
		FROM af_retry_templ
		WHERE
			bus_id = #{busId}
		AND event_type =#{eventType}
		AND (is_delete=0 or (is_delete=1 and state='M'))
    </select>
    
   	<select id="getByBusId" parameterType="java.lang.String" resultType="com.ald.fanbei.api.dal.domain.AfRetryTemplDo">

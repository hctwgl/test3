        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AfLoanSupermarketTabDo" keyProperty="id">
    	<selectKey resultType="java.lang.Long" keyProperty="id" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>

        INSERT INTO af_loan_supermarket_tab
        <trim prefix="(" suffix=")" suffixOverrides="," >

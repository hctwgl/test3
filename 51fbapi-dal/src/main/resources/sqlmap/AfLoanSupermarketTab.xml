		    </if>
        </trim>
    </insert>

    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfLoanSupermarketTabDo">
        UPDATE af_loan_supermarket_tab
          <set>
            <if test="name != null and name != '' ">        
                name = #{name,jdbcType=VARCHAR},                
            </if>
            <if test="alias != null and alias != '' ">        
                alias = #{alias,jdbcType=VARCHAR},                
            </if>
            <if test="sort != null and sort != '' ">        
                sort = #{sort,jdbcType=INTEGER},                
            </if>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="creator != null and creator != '' ">        
                creator = #{creator,jdbcType=VARCHAR},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="modifier != null and modifier != '' ">        
                modifier = #{modifier,jdbcType=VARCHAR}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{id ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfLoanSupermarketTabDo">
        SELECT
        <include refid="queryFields" />
        FROM af_loan_supermarket_tab
        WHERE is_delete = 0 AND id=#{id ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfLoanSupermarketTabDo" parameterType="com.ald.fanbei.api.dal.domain.AfLoanSupermarketTabDo">
        SELECT
        <include refid="queryFields" />
        FROM af_loan_supermarket_tab
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfLoanSupermarketTabDo" parameterType="com.ald.fanbei.api.dal.domain.AfLoanSupermarketTabDo">
        SELECT
        <include refid="queryFields" />
        FROM af_loan_supermarket_tab
        <include refid="commonCondition"/>
        order by sort asc limit 0,4
    </select>


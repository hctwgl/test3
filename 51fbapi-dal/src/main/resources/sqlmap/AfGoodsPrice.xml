    <update id="updateSell" parameterType="java.lang.Long">
        UPDATE af_goods_price SET stock = stock - #{count} , sale_count = sale_count + #{count} where id = #{priceId}
    </update>

    <update id="updateReturnGoods" parameterType="java.lang.Long">

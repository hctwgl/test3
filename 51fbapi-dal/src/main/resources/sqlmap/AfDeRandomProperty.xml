<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_de_random_property表:双十一砍价模块 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfDeRandomPropertyDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,gmt_create,gmt_modified,goodspriceid,cutmincount,cutmaxcount,pricemin,pricemax 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="gmtModified !=null">
            AND gmt_modified = #{gmtModified,jdbcType=TIMESTAMP}
        </if>
        <if test="goodspriceid != null and goodspriceid != ''">
            AND goodspriceid = #{goodspriceid,jdbcType=INTEGER}
        </if>
        <if test="cutmincount != null and cutmincount != ''">
            AND cutmincount = #{cutmincount,jdbcType=INTEGER}
        </if>
        <if test="cutmaxcount != null and cutmaxcount != ''">
            AND cutmaxcount = #{cutmaxcount,jdbcType=INTEGER}
        </if>
        <if test="pricemin != null and pricemin != ''">
            AND pricemin = #{pricemin,jdbcType=INTEGER}
        </if>
        <if test="pricemax != null and pricemax != ''">
            AND pricemax = #{pricemax,jdbcType=INTEGER}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AfDeRandomPropertyDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO af_de_random_property
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
	        <if test="gmtModified != null">        
	            gmt_modified,
	        </if>
	        <if test="goodspriceid != null">        
	            goodspriceid,
	        </if>
	        <if test="cutmincount != null">        
	            cutmincount,
	        </if>
	        <if test="cutmaxcount != null">        
	            cutmaxcount,
	        </if>
	        <if test="pricemin != null">        
	            pricemin,
	        </if>
	        <if test="pricemax != null">        
	            pricemax,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
		    <if test="gmtModified != null" >
		       #{gmtModified,jdbcType=TIMESTAMP},
		    </if>
		    <if test="goodspriceid != null" >
		       #{goodspriceid,jdbcType=INTEGER},
		    </if>
		    <if test="cutmincount != null" >
		       #{cutmincount,jdbcType=INTEGER},
		    </if>
		    <if test="cutmaxcount != null" >
		       #{cutmaxcount,jdbcType=INTEGER},
		    </if>
		    <if test="pricemin != null" >
		       #{pricemin,jdbcType=INTEGER},
		    </if>
		    <if test="pricemax != null" >
		       #{pricemax,jdbcType=INTEGER},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfDeRandomPropertyDo">
        UPDATE af_de_random_property
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="goodspriceid != null and goodspriceid != '' ">        
                goodspriceid = #{goodspriceid,jdbcType=INTEGER},                
            </if>
            <if test="cutmincount != null and cutmincount != '' ">        
                cutmincount = #{cutmincount,jdbcType=INTEGER},                
            </if>
            <if test="cutmaxcount != null and cutmaxcount != '' ">        
                cutmaxcount = #{cutmaxcount,jdbcType=INTEGER},                
            </if>
            <if test="pricemin != null and pricemin != '' ">        
                pricemin = #{pricemin,jdbcType=INTEGER},                
            </if>
            <if test="pricemax != null and pricemax != '' ">        
                pricemax = #{pricemax,jdbcType=INTEGER}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfDeRandomPropertyDo">
        SELECT
        <include refid="queryFields" />
        FROM af_de_random_property
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfDeRandomPropertyDo" parameterType="com.ald.fanbei.api.dal.domain.AfDeRandomPropertyDo">
        SELECT
        <include refid="queryFields" />
        FROM af_de_random_property
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfDeRandomPropertyDo" parameterType="com.ald.fanbei.api.dal.domain.AfDeRandomPropertyDo">
        SELECT
        <include refid="queryFields" />
        FROM af_de_random_property
        <include refid="commonCondition"/>
    </select>
    
</mapper>

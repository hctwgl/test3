<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_user_profile表 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfUserProfileDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,gmt_create,gmt_modified,user_id,account,type 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="gmtCreate != null and gmtCreate != ''">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="gmtModified != null and gmtModified != ''">
            AND gmt_modified = #{gmtModified,jdbcType=TIMESTAMP}
        </if>
        <if test="userId != null and userId != ''">
            AND user_id = #{userId,jdbcType=INTEGER}
        </if>
        <if test="account != null and account != ''">
            AND account = #{account,jdbcType=VARCHAR}
        </if>
        <if test="type != null and type != ''">
            AND type = #{type,jdbcType=VARCHAR}
        </if>
    </sql>

    
    <insert id="saveUserProfile" parameterType="com.ald.fanbei.api.dal.domain.AfUserProfileDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO af_user_profile
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        gmt_create,
	        gmt_modified,
	        user_id,
	        account,
	         type
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    NOW(),
		    NOW(),
		    #{userId,jdbcType=INTEGER},
		   #{account,jdbcType=VARCHAR},
		    #{type,jdbcType=VARCHAR}

        </trim>
    </insert>
    
    <update id="updateUserProfileById"  parameterType="com.ald.fanbei.api.dal.domain.AfUserProfileDo">
        UPDATE af_user_profile
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="userId != null and userId != '' ">        
                user_id = #{userId,jdbcType=INTEGER},                
            </if>
            <if test="account != null and account != '' ">        
                account = #{account,jdbcType=VARCHAR},                
            </if>
            <if test="type != null and type != '' ">        
                type = #{type,jdbcType=VARCHAR}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>
    <update id="updateDeleteUserProfileById" >
        UPDATE af_user_profile
        <set>
            gmt_modified = NOW(),is_delete = 1

        </set>
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getUserProfileById" resultType="com.ald.fanbei.api.dal.domain.AfUserProfileDo">
        SELECT
        <include refid="queryFields" />
        FROM af_user_profile
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getUserProfileByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfUserProfileDo" parameterType="com.ald.fanbei.api.dal.domain.AfUserProfileDo">
        SELECT
        <include refid="queryFields" />
        FROM af_user_profile
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getUserProfileListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfUserProfileDo" parameterType="com.ald.fanbei.api.dal.domain.AfUserProfileDo">
        SELECT
        <include refid="queryFields" />
        FROM af_user_profile
        <include refid="commonCondition"/>
    </select>
    
</mapper>

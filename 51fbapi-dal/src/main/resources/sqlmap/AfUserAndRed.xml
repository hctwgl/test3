<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ald.fanbei.api.dal.dao.AfUserAndRedRelationDao">

	<insert id="addUserAndRedRelation" parameterType="com.ald.fanbei.api.dal.domain.AfUserAndRedRelationDo">
		INSERT INTO af_facescore_user_red(user_id,red_id)
		VALUES (#{userId},#{redId})
	</insert>
	<select id="findUserAndRedRelationRecordByUserId" parameterType="java.lang.Long" resultType="java.lang.Integer">
	 	select count(red_id) from af_facescore_user_red where user_id = #{userId} and is_delete = 0
	</select>
	<select id="findUserAndRedRelationRecordByRedId" resultType="java.lang.Integer">
	    select count(red_id) from af_facescore_user_red where red_id = #{redId} and is_delete = 0
	</select>
</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- dsed_user_contacts表 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.DsedUserContactsDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,gmt_create,gmt_modified,user_id,contacts_mobile 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="gmtModified !=null">
            AND gmt_modified = #{gmtModified,jdbcType=TIMESTAMP}
        </if>
        <if test="userId != null and userId != ''">
            AND user_id = #{userId,jdbcType=VARCHAR}
        </if>
        <if test="contactsMobile != null and contactsMobile != ''">
            AND contacts_mobile = #{contactsMobile,jdbcType=VARCHAR}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.DsedUserContactsDo" keyProperty="rid" useGeneratedKeys="true">
        INSERT INTO dsed_user_contacts
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
	        <if test="gmtModified != null">        
	            gmt_modified,
	        </if>
	        <if test="userId != null">        
	            user_id,
	        </if>
	        <if test="contactsMobile != null">        
	            contacts_mobile,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
		    <if test="gmtModified != null" >
		       #{gmtModified,jdbcType=TIMESTAMP},
		    </if>
		    <if test="userId != null" >
		       #{userId,jdbcType=VARCHAR},
		    </if>
		    <if test="contactsMobile != null" >
		       #{contactsMobile,jdbcType=VARCHAR},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.DsedUserContactsDo">
        UPDATE dsed_user_contacts
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="userId != null and userId != '' ">        
                user_id = #{userId,jdbcType=VARCHAR},                
            </if>
            <if test="contactsMobile != null and contactsMobile != '' ">        
                contacts_mobile = #{contactsMobile,jdbcType=VARCHAR}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.DsedUserContactsDo">
        SELECT
        <include refid="queryFields" />
        FROM dsed_user_contacts
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.DsedUserContactsDo" parameterType="com.ald.fanbei.api.dal.domain.DsedUserContactsDo">
        SELECT
        <include refid="queryFields" />
        FROM dsed_user_contacts
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.DsedUserContactsDo" parameterType="com.ald.fanbei.api.dal.domain.DsedUserContactsDo">
        SELECT
        <include refid="queryFields" />
        FROM dsed_user_contacts
        <include refid="commonCondition"/>
    </select>

    <select id="getUserContactsByUserId" resultType="com.ald.fanbei.api.dal.domain.DsedUserContactsDo">
        SELECT
        <include refid="queryFields" />
        FROM dsed_user_contacts
        where user_id=#{userId}
    </select>


</mapper>

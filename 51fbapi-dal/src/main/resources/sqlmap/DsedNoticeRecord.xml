<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- dsed_notice_record表 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.DsedNoticeRecordDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,gmt_create,gmt_modified,user_id,type,ref_id,status,times 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="gmtModified !=null">
            AND gmt_modified = #{gmtModified,jdbcType=TIMESTAMP}
        </if>
        <if test="userId != null and userId != ''">
            AND user_id = #{userId,jdbcType=INTEGER}
        </if>
        <if test="type != null and type != ''">
            AND type = #{type,jdbcType=VARCHAR}
        </if>
        <if test="refId != null and refId != ''">
            AND ref_id = #{refId,jdbcType=VARCHAR}
        </if>
        <if test="status != null and status != ''">
            AND status = #{status,jdbcType=VARCHAR}
        </if>
        <if test="times != null and times != ''">
            AND times = #{times,jdbcType=VARCHAR}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.DsedNoticeRecordDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO dsed_notice_record
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
	        <if test="gmtModified != null">        
	            gmt_modified,
	        </if>
	        <if test="userId != null">        
	            user_id,
	        </if>
	        <if test="type != null">        
	            type,
	        </if>
	        <if test="refId != null">        
	            ref_id,
	        </if>
	        <if test="status != null">        
	            status,
	        </if>
	        <if test="times != null">        
	            times,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
		    <if test="gmtModified != null" >
		       #{gmtModified,jdbcType=TIMESTAMP},
		    </if>
		    <if test="userId != null" >
		       #{userId,jdbcType=INTEGER},
		    </if>
		    <if test="type != null" >
		       #{type,jdbcType=VARCHAR},
		    </if>
		    <if test="refId != null" >
		       #{refId,jdbcType=VARCHAR},
		    </if>
		    <if test="status != null" >
		       #{status,jdbcType=VARCHAR},
		    </if>
		    <if test="times != null" >
		       #{times,jdbcType=VARCHAR},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.DsedNoticeRecordDo">
        UPDATE dsed_notice_record
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="userId != null and userId != '' ">        
                user_id = #{userId,jdbcType=INTEGER},                
            </if>
            <if test="type != null and type != '' ">        
                type = #{type,jdbcType=VARCHAR},                
            </if>
            <if test="refId != null and refId != '' ">        
                ref_id = #{refId,jdbcType=VARCHAR},                
            </if>
            <if test="status != null and status != '' ">        
                status = #{status,jdbcType=VARCHAR},                
            </if>
            <if test="times != null and times != '' ">        
                times = #{times,jdbcType=VARCHAR}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.DsedNoticeRecordDo">
        SELECT
        <include refid="queryFields" />
        FROM dsed_notice_record
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.DsedNoticeRecordDo" parameterType="com.ald.fanbei.api.dal.domain.DsedNoticeRecordDo">
        SELECT
        <include refid="queryFields" />
        FROM dsed_notice_record
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.DsedNoticeRecordDo" parameterType="com.ald.fanbei.api.dal.domain.DsedNoticeRecordDo">
        SELECT
        <include refid="queryFields" />
        FROM dsed_notice_record
        <include refid="commonCondition"/>
    </select>
    <!-- 查询失败通知-->
    <select id="getAllFailNoticeRecord" resultType="DsedNoticeRecordDo" parameterType="DsedNoticeRecordDo">
        SELECT
        <include refid="queryFields" />
        FROM dsed_notice_record
        WHERE  status = 'FAIL',
    </select>
    <!-- 更新通知状态-->
    <update id="updateNoticeRecordStatus"  parameterType="com.ald.fanbei.api.dal.domain.DsedNoticeRecordDo">
        UPDATE dsed_notice_record
        <set>
            <if test="gmtModified != null and gmtModified != '' ">
                gmt_modified = now(),
            </if>
            <if test="status != null and status != '' ">
                status = 'SUCCESS',
            </if>
            <if test="times != null and times != '' ">
                times = #{times,jdbcType=VARCHAR}
            </if>
        </set>
        WHERE id = #{rid ,jdbcType=BIGINT}
    </update>
    <!-- 更新通知剩余次数-->
    <update id="updateNoticeRecordTimes"  parameterType="com.ald.fanbei.api.dal.domain.DsedNoticeRecordDo">
        UPDATE dsed_notice_record
        <set>
            <if test="gmtModified != null and gmtModified != '' ">
                gmt_modified = now(),
            </if>
            <if test="times != null and times != '' ">
                times = #{times,jdbcType=VARCHAR}
            </if>
        </set>
        WHERE id = #{rid ,jdbcType=BIGINT}
    </update>


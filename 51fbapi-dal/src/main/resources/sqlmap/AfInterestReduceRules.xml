<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_interest_reduce_rules表 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfInterestReduceRulesDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,gmt_create,gmt_modified,name,nper2,nper3,nper6,nper9,nper12 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="gmtModified !=null">
            AND gmt_modified = #{gmtModified,jdbcType=TIMESTAMP}
        </if>
        <if test="name != null and name != ''">
            AND name = #{name,jdbcType=VARCHAR}
        </if>
        <if test="nper2 != null and nper2 != ''">
            AND nper2 = #{nper2,jdbcType=DECIMAL}
        </if>
        <if test="nper3 != null and nper3 != ''">
            AND nper3 = #{nper3,jdbcType=DECIMAL}
        </if>
        <if test="nper6 != null and nper6 != ''">
            AND nper6 = #{nper6,jdbcType=DECIMAL}
        </if>
        <if test="nper9 != null and nper9 != ''">
            AND nper9 = #{nper9,jdbcType=DECIMAL}
        </if>
        <if test="nper12 != null and nper12 != ''">
            AND nper12 = #{nper12,jdbcType=DECIMAL}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AfInterestReduceRulesDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO af_interest_reduce_rules
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
	        <if test="gmtModified != null">        
	            gmt_modified,
	        </if>
	        <if test="name != null">        
	            name,
	        </if>
	        <if test="nper2 != null">        
	            nper2,
	        </if>
	        <if test="nper3 != null">        
	            nper3,
	        </if>
	        <if test="nper6 != null">        
	            nper6,
	        </if>
	        <if test="nper9 != null">        
	            nper9,
	        </if>
	        <if test="nper12 != null">        
	            nper12,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
		    <if test="gmtModified != null" >
		       #{gmtModified,jdbcType=TIMESTAMP},
		    </if>
		    <if test="name != null" >
		       #{name,jdbcType=VARCHAR},
		    </if>
		    <if test="nper2 != null" >
		       #{nper2,jdbcType=DECIMAL},
		    </if>
		    <if test="nper3 != null" >
		       #{nper3,jdbcType=DECIMAL},
		    </if>
		    <if test="nper6 != null" >
		       #{nper6,jdbcType=DECIMAL},
		    </if>
		    <if test="nper9 != null" >
		       #{nper9,jdbcType=DECIMAL},
		    </if>
		    <if test="nper12 != null" >
		       #{nper12,jdbcType=DECIMAL},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfInterestReduceRulesDo">
        UPDATE af_interest_reduce_rules
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="name != null and name != '' ">        
                name = #{name,jdbcType=VARCHAR},                
            </if>
            <if test="nper2 != null and nper2 != '' ">        
                nper2 = #{nper2,jdbcType=DECIMAL},                
            </if>
            <if test="nper3 != null and nper3 != '' ">        
                nper3 = #{nper3,jdbcType=DECIMAL},                
            </if>
            <if test="nper6 != null and nper6 != '' ">        
                nper6 = #{nper6,jdbcType=DECIMAL},                
            </if>
            <if test="nper9 != null and nper9 != '' ">        
                nper9 = #{nper9,jdbcType=DECIMAL},                
            </if>
            <if test="nper12 != null and nper12 != '' ">        
                nper12 = #{nper12,jdbcType=DECIMAL}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfInterestReduceRulesDo">
        SELECT
        <include refid="queryFields" />
        FROM af_interest_reduce_rules
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfInterestReduceRulesDo" parameterType="com.ald.fanbei.api.dal.domain.AfInterestReduceRulesDo">
        SELECT
        <include refid="queryFields" />
        FROM af_interest_reduce_rules
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfInterestReduceRulesDo" parameterType="com.ald.fanbei.api.dal.domain.AfInterestReduceRulesDo">
        SELECT
        <include refid="queryFields" />
        FROM af_interest_reduce_rules
        <include refid="commonCondition"/>
    </select>
    
</mapper>

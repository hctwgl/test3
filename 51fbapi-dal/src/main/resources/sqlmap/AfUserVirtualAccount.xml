    <select id="getCurrentMonthUsedAmount" resultType="java.math.BigDecimal" >
        SELECT
        	IFNULL(sum(amount),0)
       	FROM 
       		af_user_virtual_account
        WHERE
        	is_delete = 0
        AND	
        	year = #{year}
        AND
        	month = #{month}
        AND
        	user_id = #{userId}
        AND
        	code = #{virtualCode}

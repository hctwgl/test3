<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ald.fanbei.api.dal.dao.AfSchemeGoodsDao">
	<sql id="queryFields">
		id rid,gmt_create,gmt_modified,scheme_id,goods_id,interest_free_id
	</sql>
	
	<select id="getSchemeGoodsByGoodsId" resultType="AfSchemeGoodsDo">
		SELECT
			<include refid="queryFields" />
		FROM
			af_scheme_goods
		WHERE
			is_delete =0
		AND
			goods_id = #{goodsId}
	</select>

</mapper>
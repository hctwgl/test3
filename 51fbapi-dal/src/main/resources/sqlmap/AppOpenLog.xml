<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- app_open_log表: 首页打开日志表模块 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AppOpenLogDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,phone_type,app_version,gmt_create,user_name 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="phoneType != null and phoneType != ''">
            AND phone_type = #{phoneType,jdbcType=VARCHAR}
        </if>
        <if test="appVersion != null and appVersion != ''">
            AND app_version = #{appVersion,jdbcType=VARCHAR}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="userName != null and userName != ''">
            AND user_name = #{userName,jdbcType=VARCHAR}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AppOpenLogDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO app_open_log
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="phoneType != null">        
	            phone_type,
	        </if>
	        <if test="appVersion != null">        
	            app_version,
	        </if>
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
	        <if test="userName != null">        
	            user_name,
	        </if>
            <if test="uuid != null">
                uuid,
            </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="phoneType != null" >
		       #{phoneType,jdbcType=VARCHAR},
		    </if>
		    <if test="appVersion != null" >
		       #{appVersion,jdbcType=VARCHAR},
		    </if>
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
		    <if test="userName != null" >
		       #{userName,jdbcType=VARCHAR},
		    </if>
            <if test="uuid != null" >
                #{uuid,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AppOpenLogDo">
        UPDATE app_open_log
          <set>
            <if test="phoneType != null and phoneType != '' ">        
                phone_type = #{phoneType,jdbcType=VARCHAR},                
            </if>
            <if test="appVersion != null and appVersion != '' ">        
                app_version = #{appVersion,jdbcType=VARCHAR},                
            </if>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="userName != null and userName != '' ">        
                user_name = #{userName,jdbcType=VARCHAR}                
            </if>
        </set>    
        WHERE id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AppOpenLogDo">
        SELECT
        <include refid="queryFields" />
        FROM app_open_log
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AppOpenLogDo" parameterType="com.ald.fanbei.api.dal.domain.AppOpenLogDo">
        SELECT
        <include refid="queryFields" />
        FROM app_open_log
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AppOpenLogDo" parameterType="com.ald.fanbei.api.dal.domain.AppOpenLogDo">
        SELECT
        <include refid="queryFields" />
        FROM app_open_log
        <include refid="commonCondition"/>
    </select>
    
</mapper>

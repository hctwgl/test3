<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_user_draw表 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfUserDrawDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,gmt_create,gmt_modified,phone,`name`,`status`,open_id,nick_name,header_img,`group` 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="gmtModified !=null">
            AND gmt_modified = #{gmtModified,jdbcType=TIMESTAMP}
        </if>
        <if test="phone != null and phone != ''">
            AND phone = #{phone,jdbcType=VARCHAR}
        </if>
        <if test="name != null and name != ''">
            AND `name` = #{name,jdbcType=VARCHAR}
        </if>
        <if test="status != null and status != ''">
            AND `status` = #{status,jdbcType=INTEGER}
        </if>
        <if test="openId != null and openId != ''">
            AND open_id = #{openId,jdbcType=VARCHAR}
        </if>
        <if test="nickName != null and nickName != ''">
            AND nick_name = #{nickName,jdbcType=VARCHAR}
        </if>
        <if test="headerImg != null and headerImg != ''">
            AND header_img = #{headerImg,jdbcType=VARCHAR}
        </if>
        <if test="group != null and group != ''">
            AND `group` = #{group,jdbcType=VARCHAR}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AfUserDrawDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO af_user_draw
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
	        <if test="gmtModified != null">        
	            gmt_modified,
	        </if>
	        <if test="phone != null">        
	            phone,
	        </if>
	        <if test="name != null">        
	            `name`,
	        </if>
	        <if test="status != null">        
	            `status`,
	        </if>
	        <if test="openId != null">        
	            open_id,
	        </if>
	        <if test="nickName != null">        
	            nick_name,
	        </if>
	        <if test="headerImg != null">        
	            header_img,
	        </if>
	        <if test="group != null">        
	            `group`,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
		    <if test="gmtModified != null" >
		       #{gmtModified,jdbcType=TIMESTAMP},
		    </if>
		    <if test="phone != null" >
		       #{phone,jdbcType=VARCHAR},
		    </if>
		    <if test="name != null" >
		       #{name,jdbcType=VARCHAR},
		    </if>
		    <if test="status != null" >
		       #{status,jdbcType=INTEGER},
		    </if>
		    <if test="openId != null" >
		       #{openId,jdbcType=VARCHAR},
		    </if>
		    <if test="nickName != null" >
		       #{nickName,jdbcType=VARCHAR},
		    </if>
		    <if test="headerImg != null" >
		       #{headerImg,jdbcType=VARCHAR},
		    </if>
		    <if test="group != null" >
		       #{group,jdbcType=VARCHAR},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfUserDrawDo">
        UPDATE af_user_draw
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="phone != null and phone != '' ">        
                phone = #{phone,jdbcType=VARCHAR},                
            </if>
            <if test="name != null and name != '' ">        
                `name` = #{name,jdbcType=VARCHAR},                
            </if>
            <if test="status != null and status != '' ">        
                `status` = #{status,jdbcType=INTEGER},                
            </if>
            <if test="openId != null and openId != '' ">        
                open_id = #{openId,jdbcType=VARCHAR},                
            </if>
            <if test="nickName != null and nickName != '' ">        
                nick_name = #{nickName,jdbcType=VARCHAR},                
            </if>
            <if test="headerImg != null and headerImg != '' ">        
                header_img = #{headerImg,jdbcType=VARCHAR},                
            </if>
            <if test="group != null and group != '' ">        
                `group` = #{group,jdbcType=VARCHAR}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfUserDrawDo">
        SELECT
        <include refid="queryFields" />
        FROM af_user_draw
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfUserDrawDo" parameterType="com.ald.fanbei.api.dal.domain.AfUserDrawDo">
        SELECT
        <include refid="queryFields" />
        FROM af_user_draw
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfUserDrawDo" parameterType="com.ald.fanbei.api.dal.domain.AfUserDrawDo">
        SELECT
        <include refid="queryFields" />
        FROM af_user_draw
        <include refid="commonCondition"/>
    </select>
    
    <select id="getByPhone" resultType="com.ald.fanbei.api.dal.domain.AfUserDrawDo">
        SELECT
        <include refid="queryFields" />
        FROM af_user_draw
        where is_delete = 0 AND phone = #{phone,jdbcType=VARCHAR}
    </select>
    
    <select id="getByOpenId" resultType="com.ald.fanbei.api.dal.domain.AfUserDrawDo">
        SELECT
        <include refid="queryFields" />
        FROM af_user_draw
        where is_delete = 0 AND open_id = #{openId,jdbcType=VARCHAR}
    </select>
    
    <select id="getByPhoneAndStatus" resultType="com.ald.fanbei.api.dal.domain.AfUserDrawDo">
        SELECT
        <include refid="queryFields" />
        FROM af_user_draw
        where is_delete = 0 AND phone = #{phone,jdbcType=VARCHAR} and `status` = #{status,jdbcType=INTEGER}
    </select>
    
    <select id="getByStatus" resultType="com.ald.fanbei.api.dal.domain.dto.UserDrawInfo">
        SELECT
        id rid,phone,`name`,nick_name,header_img
        FROM af_user_draw
        where is_delete = 0 AND `status` = #{status,jdbcType=INTEGER}
    </select>
    
    <update id="updateWinUserStatus"  parameterType="com.ald.fanbei.api.dal.domain.AfUserDrawDo">
        UPDATE af_user_draw                   
        set `status` = #{status,jdbcType=INTEGER},      
            `group` = UNIX_TIMESTAMP()   
        where id in
        <foreach collection="userList" item="item" open="(" separator="," close=")">
                #{item.rid}       
        </foreach>
    </update>
    
</mapper>

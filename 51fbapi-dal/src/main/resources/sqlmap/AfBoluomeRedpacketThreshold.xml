<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_boluome_redpacket_threshold表:点亮活动新版模块 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfBoluomeRedpacketThresholdDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,gmt_create,gmt_modified,start,end 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="gmtModified !=null">
            AND gmt_modified = #{gmtModified,jdbcType=TIMESTAMP}
        </if>
        <if test="start != null and start != ''">
            AND start = #{start,jdbcType=INTEGER}
        </if>
        <if test="end != null and end != ''">
            AND end = #{end,jdbcType=INTEGER}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AfBoluomeRedpacketThresholdDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO af_boluome_redpacket_threshold
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
	        <if test="gmtModified != null">        
	            gmt_modified,
	        </if>
	        <if test="start != null">        
	            start,
	        </if>
	        <if test="end != null">        
	            end,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
		    <if test="gmtModified != null" >
		       #{gmtModified,jdbcType=TIMESTAMP},
		    </if>
		    <if test="start != null" >
		       #{start,jdbcType=INTEGER},
		    </if>
		    <if test="end != null" >
		       #{end,jdbcType=INTEGER},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfBoluomeRedpacketThresholdDo">
        UPDATE af_boluome_redpacket_threshold
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="start != null and start != '' ">        
                start = #{start,jdbcType=INTEGER},                
            </if>
            <if test="end != null and end != '' ">        
                end = #{end,jdbcType=INTEGER}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfBoluomeRedpacketThresholdDo">
        SELECT
        <include refid="queryFields" />
        FROM af_boluome_redpacket_threshold
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfBoluomeRedpacketThresholdDo" parameterType="com.ald.fanbei.api.dal.domain.AfBoluomeRedpacketThresholdDo">
        SELECT
        <include refid="queryFields" />
        FROM af_boluome_redpacket_threshold
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfBoluomeRedpacketThresholdDo" parameterType="com.ald.fanbei.api.dal.domain.AfBoluomeRedpacketThresholdDo">
        SELECT
        <include refid="queryFields" />
        FROM af_boluome_redpacket_threshold
        <include refid="commonCondition"/>
    </select>
    <select id ="getAllThreadholds">
    	SELECT * FROM af_boluome_redpacket_threshold;
    </select>
</mapper>

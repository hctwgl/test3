<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ald.fanbei.api.dal.dao.AfOrderTempDao">
	<sql id="queryFields">
		id rid,user_id,order_no,status
	</sql>
	
	<insert id="addUserOrder" parameterType="AfOrderTempDo" useGeneratedKeys="true" keyProperty="rid">
		INSERT INTO af_order_temp(user_id ,gmt_create, order_no)
		VALUES (
    		#{userId},
    		NOW(),
    		#{orderNo}
		)
	</insert>
	
	<select id="getByOrderNo" resultType="AfOrderTempDo">
	    SELECT
	    	<include refid="queryFields" />
	    FROM
	   		 af_order_temp
	    WHERE
	    	is_delete = 0
	     AND
	         order_no =#{orderNo}
	</select>
</mapper>
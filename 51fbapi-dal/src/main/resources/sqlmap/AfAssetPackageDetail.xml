    <update id="invalidPackageDetail"  parameterType="java.lang.String">
        UPDATE af_asset_package_detail set
                gmt_modified = now(),                
                status = 'N',
                is_delete=1               
        WHERE  borrow_no = #{borrowNo} and status ='Y'
    </update>
    
    <update id="updateReDisTri" parameterType="java.lang.String">
		  UPDATE af_asset_package_detail set status='R',gmt_modified=now() 
			where status = 'Y' and is_delete=1 and borrow_no=#{borrowNo}
	</update>
	
	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfAssetPackageDetailDo">
        SELECT
        <include refid="queryFields" />
        FROM af_asset_package_detail
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>
    

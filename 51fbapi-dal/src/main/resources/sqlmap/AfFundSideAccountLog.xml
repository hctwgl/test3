	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfFundSideAccountLogDo">
        SELECT
        <include refid="queryFields" />
        FROM af_fund_side_account_log
        WHERE id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1

    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfFundSideAccountLogDo">
        UPDATE af_fund_side_account_log
          <set>
            <if test="fundSideInfoId != null and fundSideInfoId != '' ">        
                fund_side_info_id = #{fundSideInfoId,jdbcType=INTEGER},                

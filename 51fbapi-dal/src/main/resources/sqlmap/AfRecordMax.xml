<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_record_max表 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfRecordMaxDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,bus_id,event_type,gmt_create,gmt_modified 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="busId != null and busId != ''">
            AND bus_id = #{busId,jdbcType=VARCHAR}
        </if>
        <if test="eventType != null and eventType != ''">
            AND event_type = #{eventType,jdbcType=VARCHAR}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="gmtModified !=null">
            AND gmt_modified = #{gmtModified,jdbcType=TIMESTAMP}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AfRecordMaxDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO af_record_max
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="busId != null">        
	            bus_id,
	        </if>
	        <if test="eventType != null">        
	            event_type,
	        </if>
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
	        <if test="gmtModified != null">        
	            gmt_modified,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="busId != null" >
		       #{busId,jdbcType=VARCHAR},
		    </if>
		    <if test="eventType != null" >
		       #{eventType,jdbcType=VARCHAR},
		    </if>
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
		    <if test="gmtModified != null" >
		       #{gmtModified,jdbcType=TIMESTAMP},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfRecordMaxDo">
        UPDATE af_record_max
          <set>
            <if test="busId != null and busId != '' ">        
                bus_id = #{busId,jdbcType=VARCHAR},                
            </if>
            <if test="eventType != null and eventType != '' ">        
                event_type = #{eventType,jdbcType=VARCHAR},                
            </if>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfRecordMaxDo">
        SELECT
        <include refid="queryFields" />
        FROM af_record_max
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfRecordMaxDo" parameterType="com.ald.fanbei.api.dal.domain.AfRecordMaxDo">
        SELECT
        <include refid="queryFields" />
        FROM af_record_max
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfRecordMaxDo" parameterType="com.ald.fanbei.api.dal.domain.AfRecordMaxDo">
        SELECT
        <include refid="queryFields" />
        FROM af_record_max
        <include refid="commonCondition"/>
    </select>
    
    <select id="getByBusIdAndEventype" parameterType="java.lang.String" resultType="com.ald.fanbei.api.dal.domain.AfRecordMaxDo">
    	SELECT
		<include refid="queryFields" />
		FROM af_record_max
		WHERE
			bus_id = #{busId}
		AND event_type =#{eventType}
		AND is_delete=0
		LIMIT 1
    </select>
    
    <update id="deleteById">
        UPDATE af_record_max
        set is_delete=1,gmt_modified =now()
     	WHERE
			id = #{id}
    </update>
    
</mapper>

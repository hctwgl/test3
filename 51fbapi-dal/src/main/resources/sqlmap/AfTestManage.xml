<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ald.fanbei.api.dal.dao.AfTestManageDao">
	<sql id="queryFields">
		id rid,gmt_create,gmt_modified,is_delete,test_name,test_describe,status,rule
	</sql>
	
	
	<select id="getTestInfoByTag" resultType="AfTestManageDo">
		SELECT 
			<include refid="queryFields"/>
		FROM af_test_manage WHERE is_delete = 0 AND tag = #{tag}
	</select>
	
</mapper>
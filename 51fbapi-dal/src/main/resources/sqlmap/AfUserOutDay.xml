<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ald.fanbei.api.dal.dao.AfUserOutDayDao">
	<sql id="queryFields">
		id,user_id,gmt_create,gmt_modify,out_day,pay_day
	</sql>


	<insert id="addserOutDay" parameterType="AfUserOutDayDo" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO af_user_out_day(user_id , gmt_create , gmt_modify , out_day,pay_day)
		VALUES (
		#{userId},
		NOW(),
		NOW(),
		#{outDay},
		#{payDay}
		)
	</insert>

	<select id="getUserOutDayByUserId" resultType="AfUserOutDayDo">
		SELECT <include refid="queryFields"/> from af_user_out_day where user_id = #{userId}
	</select>
	
	<select id="countUserOutDayLogByUserId" resultType="java.lang.Integer">
		SELECT count(1) from af_user_out_day_log where user_id = #{userId}
	</select>
	
	<insert id ="insertUserOutDay">
		INSERT into af_user_out_day(user_id,gmt_create,out_day,pay_day)
		VALUES (#{userId},NOW(),#{outDay},#{payDay});
	</insert>

	<update id="updateUserOutDay">
		UPDATE af_user_out_day SET gmt_modify = NOW(),out_day=#{outDay},pay_day=#{payDay}
		where user_id = #{userId};
	</update>

	<insert id="insertUserOutDayLog">
		insert into af_user_out_day_log(user_id,gmt_create,out_day)
		VALUES (#{userId},NOW(),#{outDay});
	</insert>
</mapper>
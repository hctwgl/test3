	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfSupGameDo">
        SELECT
        <include refid="queryFields" />
        FROM af_sup_game
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfSupGameDo" parameterType="com.ald.fanbei.api.dal.domain.AfSupGameDo">
        SELECT
        <include refid="queryFields" />
        FROM af_sup_game
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfSupGameDo" parameterType="com.ald.fanbei.api.dal.domain.AfSupGameDo">

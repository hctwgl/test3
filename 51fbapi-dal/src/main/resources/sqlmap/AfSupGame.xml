        <include refid="commonCondition"/>
    </select>
    
    <select id="getHotGoodsList" resultType="com.ald.fanbei.api.dal.domain.dto.GameGoods">
	    SELECT id,`name`,hot_image as image,offical_discount as discout, offical_discount - business_discount as rebate
		FROM af_sup_game
		where is_delete = 0 AND is_hot = 1 and type = #{type} 		
		<if test="invelomentType != 'preEnv' "> 
			and status =1
		</if>
		ORDER BY sort 
    </select>
    

			<id column="id" property="id" />
			<result column="name" property="name" />
			<result column="image" property="image" />
			<result column="discout" property="discout" />
			<result column="rebate" property="rebate" />
		</collection> 
    </resultMap>
    
    <select id="getGameGoodsList" resultMap="gameGoodsGroup">
	    SELECT 
		    	first_char as groupName,id,`name`,image,offical_discount as discout, offical_discount - business_discount as rebate
		FROM af_sup_game
		where is_delete = 0 and type = 'GAME' 
		<if test="invelomentType != 'preEnv' "> 
			and status =1
		</if>
		order by groupName,`name`
    </select>
    <select id="getAmusementGoodsList" resultMap="gameGoodsGroup">
	    SELECT 
		    	sec_type as groupName,id,`name`,image,offical_discount as discout, offical_discount - business_discount as rebate
		FROM af_sup_game
		where is_delete = 0 and type = 'AMUSEMENT'

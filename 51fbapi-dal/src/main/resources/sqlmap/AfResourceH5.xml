<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_resource_h5表:用户菠萝觅优惠券模块 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfResourceH5Dao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
      id rid,gmt_create,gmt_modified,creator,modifier,name,status,sort
    </sql>
    
    <select id="selectByStatus" resultType="AfResourceH5Dto">
        SELECT
          id id,gmt_create,gmt_modified,creator,modifier,name,status,sort
        FROM
          af_resource_h5
        where is_delete = 0 AND status = 0
        and tag = #{tag}
        order by sort desc
    </select>

    <select id="getByPageFlag" resultType="AfResourceH5Dto">
        SELECT
          <include refid="queryFields"/>
        FROM
          af_resource_h5
        WHERE is_delete = 0 AND status = 0 and page_flag = #{pageFlag} LIMIT 1
    </select>

    
</mapper>

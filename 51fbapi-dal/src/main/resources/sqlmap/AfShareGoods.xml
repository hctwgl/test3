<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_share_goods表:新人专享模块 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfShareGoodsDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,gmt_create,gmt_modified,goods_id,decrease_price,type 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="gmtModified !=null">
            AND gmt_modified = #{gmtModified,jdbcType=TIMESTAMP}
        </if>
        <if test="goodsId != null and goodsId != ''">
            AND goods_id = #{goodsId,jdbcType=INTEGER}
        </if>
        <if test="decreasePrice != null and decreasePrice != ''">
            AND decrease_price = #{decreasePrice,jdbcType=DECIMAL}
        </if>
        <if test="type != null and type != ''">
            AND type = #{type,jdbcType=VARCHAR}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AfShareGoodsDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO af_share_goods
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
	        <if test="gmtModified != null">        
	            gmt_modified,
	        </if>
	        <if test="goodsId != null">        
	            goods_id,
	        </if>
	        <if test="decreasePrice != null">        
	            decrease_price,
	        </if>
	        <if test="type != null">        
	            type,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
		    <if test="gmtModified != null" >
		       #{gmtModified,jdbcType=TIMESTAMP},
		    </if>
		    <if test="goodsId != null" >
		       #{goodsId,jdbcType=INTEGER},
		    </if>
		    <if test="decreasePrice != null" >
		       #{decreasePrice,jdbcType=DECIMAL},
		    </if>
		    <if test="type != null" >
		       #{type,jdbcType=VARCHAR},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfShareGoodsDo">
        UPDATE af_share_goods
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="goodsId != null and goodsId != '' ">        
                goods_id = #{goodsId,jdbcType=INTEGER},                
            </if>
            <if test="decreasePrice != null and decreasePrice != '' ">        
                decrease_price = #{decreasePrice,jdbcType=DECIMAL},                
            </if>
            <if test="type != null and type != '' ">        
                type = #{type,jdbcType=VARCHAR}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfShareGoodsDo">
        SELECT
        <include refid="queryFields" />
        FROM af_share_goods
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfShareGoodsDo" parameterType="com.ald.fanbei.api.dal.domain.AfShareGoodsDo">
        SELECT
        <include refid="queryFields" />
        FROM af_share_goods
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfShareGoodsDo" parameterType="com.ald.fanbei.api.dal.domain.AfShareGoodsDo">
        SELECT
        <include refid="queryFields" />
        FROM af_share_goods
        <include refid="commonCondition"/>
    </select>
    <select id="getAllGoodsList" resultType="com.ald.fanbei.api.dal.domain.AfShareGoodsDo">
   		SELECT
        <include refid="queryFields" />
        FROM af_share_goods
    </select>
    
    <select id="getShareGoods" resultType="com.ald.fanbei.api.dal.domain.dto.AfShareGoodsDto">
	    SELECT
		goods_id rid,decrease_price,price_amount,sale_amount,rebate_amount,name,goods_icon,thumbnail_icon,goods_detail,open_id,source
		FROM af_share_goods sg
		LEFT JOIN 
			af_goods g 
		ON 
			sg.goods_id = g.id
		WHERE
			sg.is_delete = 0
		AND
			sg.type = 'FRESHMAN_SHARE'
		AND
			g.source = 'SELFSUPPORT'
		AND 
			g.STATUS = 'PUBLISH'
		ORDER BY sort ASC
    </select>
    
    <select id="getCountByGoodsId" resultType="java.lang.Integer" parameterType="java.lang.Long">
    	SELECT
		count(0)
		FROM
		af_share_goods
		WHERE
		goods_id=#{goodsId}
		and is_delete = 0
    </select>
    
</mapper>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_share_user_goods表:新人专享模块 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfShareUserGoodsDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,gmt_create,gmt_modified,user_id,goods_price_id,is_buy,order_id 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="gmtModified !=null">
            AND gmt_modified = #{gmtModified,jdbcType=TIMESTAMP}
        </if>
        <if test="userId != null and userId != ''">
            AND user_id = #{userId,jdbcType=INTEGER}
        </if>
        <if test="goodsPriceId != null and goodsPriceId != ''">
            AND goods_price_id = #{goodsPriceId,jdbcType=INTEGER}
        </if>
        <if test="isBuy != null and isBuy != ''">
            AND is_buy = #{isBuy,jdbcType=INTEGER}
        </if>
        <if test="orderId != null and orderId != ''">
            AND order_id = #{orderId,jdbcType=INTEGER}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AfShareUserGoodsDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO af_share_user_goods
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
	        <if test="gmtModified != null">        
	            gmt_modified,
	        </if>
	        <if test="userId != null">        
	            user_id,
	        </if>
	        <if test="goodsPriceId != null">        
	            goods_price_id,
	        </if>
	        <if test="isBuy != null">        
	            is_buy,
	        </if>
	        <if test="orderId != null">        
	            order_id,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
		    <if test="gmtModified != null" >
		       #{gmtModified,jdbcType=TIMESTAMP},
		    </if>
		    <if test="userId != null" >
		       #{userId,jdbcType=INTEGER},
		    </if>
		    <if test="goodsPriceId != null" >
		       #{goodsPriceId,jdbcType=INTEGER},
		    </if>
		    <if test="isBuy != null" >
		       #{isBuy,jdbcType=INTEGER},
		    </if>
		    <if test="orderId != null" >
		       #{orderId,jdbcType=INTEGER},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfShareUserGoodsDo">
        UPDATE af_share_user_goods
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="userId != null and userId != '' ">        
                user_id = #{userId,jdbcType=INTEGER},                
            </if>
            <if test="goodsPriceId != null and goodsPriceId != '' ">        
                goods_price_id = #{goodsPriceId,jdbcType=INTEGER},                
            </if>
            <if test="isBuy != null and isBuy != '' ">        
                is_buy = #{isBuy,jdbcType=INTEGER},                
            </if>
            <if test="orderId != null and orderId != '' ">        
                order_id = #{orderId,jdbcType=INTEGER}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfShareUserGoodsDo">
        SELECT
        <include refid="queryFields" />
        FROM af_share_user_goods
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfShareUserGoodsDo" parameterType="com.ald.fanbei.api.dal.domain.AfShareUserGoodsDo">
        SELECT
        <include refid="queryFields" />
        FROM af_share_user_goods
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfShareUserGoodsDo" parameterType="com.ald.fanbei.api.dal.domain.AfShareUserGoodsDo">
        SELECT
        <include refid="queryFields" />
        FROM af_share_user_goods
        <include refid="commonCondition"/>
    </select>
    <update id="updateIsBuyById" >
	     UPDATE af_share_user_goods
	        set gmt_modified = now(), is_buy = #{isBuy,jdbcType=INTEGER}
	     WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>
    
    <select id="getByUserId" resultType="com.ald.fanbei.api.dal.domain.AfShareUserGoodsDo" parameterType="java.lang.Long">
    	SELECT
        	<include refid="queryFields" />
        FROM af_share_user_goods
        WHERE
        	user_id=#{userId}
        AND
        	is_buy=1
        limit 0,1
    </select>
    
</mapper>

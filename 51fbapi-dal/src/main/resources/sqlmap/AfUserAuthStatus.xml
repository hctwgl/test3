<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_user_auth_status表 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfUserAuthStatusDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,gmt_create,gmt_modified,scene,status,user_id,cause_reason
    </sql>

    <insert id="addAfUserAuthStatus" parameterType="com.ald.fanbei.api.dal.domain.AfUserAuthStatusDo" keyProperty="rid">
        INSERT INTO af_user_auth_status
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="scene != null">
                scene,
	        </if>
	        <if test="status != null">
                status,
	        </if>
	        <if test="userId != null">
                user_id,
	        </if>
	        <if test="causeReason != null">
                cause_reason
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="scene != null" >
		       #{scene,jdbcType=VARCHAR},
		    </if>
		    <if test="status != null" >
		       #{status,jdbcType=VARCHAR},
		    </if>
		    <if test="userId != null" >
		       #{userId},
		    </if>
		    <if test="causeReason != null" >
		       #{causeReason,jdbcType=VARCHAR}
		    </if>
        </trim>
    </insert>

    <select id="selectAfUserAuthStatusByUserIdAndScene" resultType="com.ald.fanbei.api.dal.domain.AfUserAuthStatusDo">
        SELECT
        <include refid="queryFields" />
        FROM af_user_auth_status
       where
        is_delete = 0
        AND status=#{status}
        AND user_id=#{userId}
        AND scene =#{scene}
    </select>
    
</mapper>

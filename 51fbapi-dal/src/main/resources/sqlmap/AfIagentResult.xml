<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_iagent_result表 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfIagentResultDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,gmt_create,gmt_modified,work_id,order_id,user_id,audio_url,order_no,order_type,check_state
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="gmtModified !=null">
            AND gmt_modified = #{gmtModified,jdbcType=TIMESTAMP}
        </if>
        <if test="workId != null and workId != ''">
            AND work_id = #{workId,jdbcType=INTEGER}
        </if>
        <if test="orderId != null and orderId != ''">
            AND order_id = #{orderId,jdbcType=INTEGER}
        </if>
        <if test="userId != null and userId != ''">
            AND user_id = #{userId,jdbcType=INTEGER}
        </if>
        <if test="workResult != null and workResult != ''">
            AND work_result = #{workResult,jdbcType=VARCHAR}
        </if>
        <if test="audioUrl != null and audioUrl != ''">
            AND audio_url = #{audioUrl,jdbcType=VARCHAR}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AfIagentResultDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO af_iagent_result
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="workId != null">
	            work_id,
	        </if>
	        <if test="orderId != null">        
	            order_id,
	        </if>
            <if test="orderNo != null">
                order_no,
            </if>
            <if test="orderType != null">
                order_type,
            </if>
	        <if test="userId != null">        
	            user_id,
	        </if>
	        <if test="workResult != null">
	            work_result,
	        </if>
	        <if test="audioUrl != null">        
	            audio_url,
	        </if>
            gmt_create,
            gmt_modified
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >

		    <if test="workId != null" >
		       #{workId,jdbcType=INTEGER},
		    </if>
		    <if test="orderId != null" >
		       #{orderId,jdbcType=INTEGER},
		    </if>
            <if test="orderNo != null">
                #{orderNo,jdbcType=INTEGER},
            </if>
            <if test="orderType != null">
                #{orderType,jdbcType=INTEGER},
            </if>
		    <if test="userId != null" >
		       #{userId,jdbcType=INTEGER},
		    </if>
		    <if test="workResult != null" >
		       #{workResult,jdbcType=VARCHAR},
		    </if>
		    <if test="audioUrl != null" >
		       #{audioUrl,jdbcType=VARCHAR},
            </if>
            now(),
            now()
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfIagentResultDo">
        UPDATE af_iagent_result
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="workId != null and workId != '' ">        
                work_id = #{workId,jdbcType=INTEGER},                
            </if>
            <if test="orderId != null and orderId != '' ">        
                order_id = #{orderId,jdbcType=INTEGER},                
            </if>
            <if test="userId != null and userId != '' ">        
                user_id = #{userId,jdbcType=INTEGER},                
            </if>
            <if test="workResult != null and workResult != '' ">        
                work_result = #{workResult,jdbcType=VARCHAR},                
            </if>
            <if test="audioUrl != null and audioUrl != '' ">        
                audio_url = #{audioUrl,jdbcType=VARCHAR}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfIagentResultDo">
        SELECT
        <include refid="queryFields" />
        FROM af_iagent_result
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfIagentResultDo" parameterType="com.ald.fanbei.api.dal.domain.AfIagentResultDo">
        SELECT
        <include refid="queryFields" />
        FROM af_iagent_result
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfIagentResultDo" parameterType="com.ald.fanbei.api.dal.domain.AfIagentResultDo">
        SELECT
        <include refid="queryFields" />
        FROM af_iagent_result
        <include refid="commonCondition"/>
    </select>
    <update id="updateResultByWorkId" parameterType="com.ald.fanbei.api.dal.domain.AfIagentResultDo">
        UPDATE af_iagent_result SET gmt_modified=now()
        <if test="workResult != null and workResult != '' ">
            ,work_result=#{workResult}
        </if>
        <if test="audioUrl != null and audioUrl != '' ">
            ,audio_url=#{audioUrl}
        </if>
        <if test="checkState != null and checkState != '' ">
            ,check_state=#{checkState}
        </if>
        <if test="checkResult != null and checkResult != '' ">
            ,check_result=#{checkResult}
        </if>
        WHERE work_id=#{workId}
    </update>
    <select id="getIagentByWorkId" resultType="com.ald.fanbei.api.dal.domain.AfIagentResultDo">
        SELECT
        <include refid="queryFields" />
        FROM af_iagent_result
        WHERE work_id=#{workId}
    </select>

    <select id="getIagentByUserIdAndStatusTime"  resultType="com.ald.fanbei.api.dal.domain.AfIagentResultDo">
        SELECT
        <include refid="queryFields" />
        FROM af_iagent_result
        WHERE user_id=#{userId} and is_delete=0
        <if test="checkState != null and checkState !=''">
            and check_state = #{checkState}
        </if>
        <if test="dayNum != null">
            and TIMESTAMPDIFF(DAY,gmt_create,now()) &lt; #{dayNum}
        </if>
    </select>
</mapper>

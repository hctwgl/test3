<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ald.fanbei.api.dal.dao.AfActivityDao">
	<sql id="queryFields">
		gmt_end,status,gmt_modified,type,gmt_start,creator,id rid,modifier,quota,gmt_create,rule_json,description,name,quota_already,h5_url
	</sql>
	
	<select id="getActivityByType" resultType="AfActivityDo">
		SELECT 
			<include refid="queryFields"/>
		FROM af_activity WHERE is_delete = 0 AND status = 'O' AND type=#{type} LIMIT 1;
    </select>

</mapper>
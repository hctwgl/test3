<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_abtest_device_new表 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfAbtestDeviceNewDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,gmt_modified,gmt_create,user_id,device_num,login_date 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="gmtModified !=null">
            AND gmt_modified = #{gmtModified,jdbcType=TIMESTAMP}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="userId != null and userId != ''">
            AND user_id = #{userId,jdbcType=INTEGER}
        </if>
        <if test="deviceNum != null and deviceNum != ''">
            AND device_num = #{deviceNum,jdbcType=VARCHAR}
        </if>
        <if test="loginDate !=null">
            AND login_date = #{loginDate,jdbcType=TIMESTAMP}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AfAbtestDeviceNewDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO af_abtest_device_new
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="gmtModified != null">        
	            gmt_modified,
	        </if>
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
	        <if test="userId != null">        
	            user_id,
	        </if>
	        <if test="deviceNum != null">        
	            device_num,
	        </if>
	        <if test="loginDate != null">        
	            login_date,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="gmtModified != null" >
		       #{gmtModified,jdbcType=TIMESTAMP},
		    </if>
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
		    <if test="userId != null" >
		       #{userId,jdbcType=INTEGER},
		    </if>
		    <if test="deviceNum != null" >
		       #{deviceNum,jdbcType=VARCHAR},
		    </if>
		    <if test="loginDate != null" >
		       #{loginDate,jdbcType=TIMESTAMP},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfAbtestDeviceNewDo">
        UPDATE af_abtest_device_new
          <set>
            <if test="gmtModified != null and gmtModified != '' ">        
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},                
            </if>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="userId != null and userId != '' ">        
                user_id = #{userId,jdbcType=INTEGER},                
            </if>
            <if test="deviceNum != null and deviceNum != '' ">        
                device_num = #{deviceNum,jdbcType=VARCHAR},                
            </if>
            <if test="loginDate != null and loginDate != '' ">        
                login_date = #{loginDate,jdbcType=TIMESTAMP}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="com.ald.fanbei.api.dal.domain.AfAbtestDeviceNewDo">
        SELECT
        <include refid="queryFields" />
        FROM af_abtest_device_new
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfAbtestDeviceNewDo" parameterType="com.ald.fanbei.api.dal.domain.AfAbtestDeviceNewDo">
        SELECT
        <include refid="queryFields" />
        FROM af_abtest_device_new
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfAbtestDeviceNewDo" parameterType="com.ald.fanbei.api.dal.domain.AfAbtestDeviceNewDo">
        SELECT
        <include refid="queryFields" />
        FROM af_abtest_device_new
        <include refid="commonCondition"/>
    </select>
    
  <insert id="addUserDeviceInfo" parameterType="AfAbTestDeviceDo" keyProperty="id" useGeneratedKeys="true" >
		INSERT INTO
			af_abtest_device_new
			(
				gmt_create,
				gmt_modified,
				user_id,
				device_num,
				login_date
			)
		VALUES
		    (
				NOW(),
				NOW(),
				#{userId},
				#{deviceNum},
				#{loginDate}
			)
	</insert>
    
</mapper>

<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ald.fanbei.api.dal.dao.AfYibaoOrderDao">
	<sql id="queryFields">
		id,order_no,pay_type,gtm_create,status
	</sql>


	<insert id="addYibaoOrder" parameterType="AfYibaoOrderDo" useGeneratedKeys="true" keyProperty="rid">
		INSERT INTO af_yibao_order(order_no , pay_type , gtm_create , status)
		VALUES (
		#{orderNo},
		#{payType},
		NOW(),
		#{status}
		)
	</insert>

	<update id="updateYiBaoOrderStatus">
		update af_yibao_order set status = #{status} where id =#{id}
	</update>

	<update id="updateYiBaoOrderStatusByOrderNo">
		update af_yibao_order set status = #{status} where order_no =#{orderNo}
	</update>

	<select id="getYiBaoOrderByOrderNo" resultType="AfYibaoOrderDo">
		select <include refid="queryFields"/> from  af_yibao_order  where order_no =#{orderNo}
	</select>
</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- af_union_third_register表:'联合注册成功日志表模块 -->
<mapper namespace="com.ald.fanbei.api.dal.dao.AfUnionThirdRegisterDao">
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="queryFields">
        id rid,gmt_create,channel_code,phone,default_password,request_info,user_state,return_url 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="commonCondition">
    	WHERE is_delete = 0
        <if test="rid !=null">
            AND id  = #{rid,jdbcType=INTEGER}
        </if>
        <if test="gmtCreate !=null">
            AND gmt_create = #{gmtCreate,jdbcType=TIMESTAMP}
        </if>
        <if test="channelCode != null and channelCode != ''">
            AND channel_code = #{channelCode,jdbcType=VARCHAR}
        </if>
        <if test="phone != null and phone != ''">
            AND phone = #{phone,jdbcType=VARCHAR}
        </if>
        <if test="defaultPassword != null and defaultPassword != ''">
            AND default_password = #{defaultPassword,jdbcType=VARCHAR}
        </if>
        <if test="requestInfo != null and requestInfo != ''">
            AND request_info = #{requestInfo,jdbcType=VARCHAR}
        </if>
        <if test="userState != null and userState != ''">
            AND user_state = #{userState,jdbcType=INTEGER}
        </if>
        <if test="returnUrl != null and returnUrl != ''">
            AND return_url = #{returnUrl,jdbcType=VARCHAR}
        </if>
    </sql>

    
    <insert id="saveRecord" parameterType="com.ald.fanbei.api.dal.domain.AfUnionThirdRegisterDo" keyProperty="rid">
    	<selectKey resultType="java.lang.Long" keyProperty="rid" order="AFTER" >
	      SELECT LAST_INSERT_ID()
	    </selectKey>
    
        INSERT INTO af_union_third_register
        <trim prefix="(" suffix=")" suffixOverrides="," >
	        <if test="gmtCreate != null">        
	            gmt_create,
	        </if>
	        <if test="channelCode != null">        
	            channel_code,
	        </if>
	        <if test="phone != null">        
	            phone,
	        </if>
	        <if test="defaultPassword != null">        
	            default_password,
	        </if>
	        <if test="requestInfo != null">        
	            request_info,
	        </if>
	        <if test="userState != null">        
	            user_state,
	        </if>
	        <if test="returnUrl != null">        
	            return_url,
	        </if>
        </trim>
        
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		    <if test="gmtCreate != null" >
		       #{gmtCreate,jdbcType=TIMESTAMP},
		    </if>
		    <if test="channelCode != null" >
		       #{channelCode,jdbcType=VARCHAR},
		    </if>
		    <if test="phone != null" >
		       #{phone,jdbcType=VARCHAR},
		    </if>
		    <if test="defaultPassword != null" >
		       #{defaultPassword,jdbcType=VARCHAR},
		    </if>
		    <if test="requestInfo != null" >
		       #{requestInfo,jdbcType=VARCHAR},
		    </if>
		    <if test="userState != null" >
		       #{userState,jdbcType=INTEGER},
		    </if>
		    <if test="returnUrl != null" >
		       #{returnUrl,jdbcType=VARCHAR},
		    </if>
        </trim>
    </insert>
    
    <update id="updateById"  parameterType="com.ald.fanbei.api.dal.domain.AfUnionThirdRegisterDo">
        UPDATE af_union_third_register
          <set>
            <if test="gmtCreate != null and gmtCreate != '' ">        
                gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},                
            </if>
            <if test="channelCode != null and channelCode != '' ">        
                channel_code = #{channelCode,jdbcType=VARCHAR},                
            </if>
            <if test="phone != null and phone != '' ">        
                phone = #{phone,jdbcType=VARCHAR},                
            </if>
            <if test="defaultPassword != null and defaultPassword != '' ">        
                default_password = #{defaultPassword,jdbcType=VARCHAR},                
            </if>
            <if test="requestInfo != null and requestInfo != '' ">        
                request_info = #{requestInfo,jdbcType=VARCHAR},                
            </if>
            <if test="userState != null and userState != '' ">        
                user_state = #{userState,jdbcType=INTEGER},                
            </if>
            <if test="returnUrl != null and returnUrl != '' ">        
                return_url = #{returnUrl,jdbcType=VARCHAR}                
            </if>
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getIsRegister" resultType="java.lang.Integer">
        SELECT
        count(1)
        FROM af_union_third_register
        WHERE phone=#{phone} and channel_code=#{lsmNo}
    </select>

	<select id="getByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfUnionThirdRegisterDo" parameterType="com.ald.fanbei.api.dal.domain.AfUnionThirdRegisterDo">
        SELECT
        <include refid="queryFields" />
        FROM af_union_third_register
        <include refid="commonCondition"/> 
        limit 0,1
    </select>
               
    <select id="getListByCommonCondition" resultType="com.ald.fanbei.api.dal.domain.AfUnionThirdRegisterDo" parameterType="com.ald.fanbei.api.dal.domain.AfUnionThirdRegisterDo">
        SELECT
        <include refid="queryFields" />
        FROM af_union_third_register
        <include refid="commonCondition"/>
    </select>
    
</mapper>
